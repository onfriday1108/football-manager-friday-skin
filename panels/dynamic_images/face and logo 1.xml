<panel >
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

	<!-- Background image layer -->
  <container id="laye" class="client_object_viewer_xml_panel">
    <layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>
    
      <!-- PROP_TEAM -->
    <record id="object_property" get_property="Ttea" set_property="objt"/>

    <widget class="picture" id="bgim" file="photos/dynamic/generic/bg" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true">
      <!-- PROP_TEAM_STADIUM_SEAT_COLOUR - red replacement -->
       <record id="object_property" get_property="TsSC" set_property="rrep"/>
    </widget>
    
    <!-- A random stock image if no stadium-->
    <widget class="value_based_picture" id="bckp" rand="true" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true">
      <list id="value_list">
        <record value="0" file="photos/dynamic/blurred stadium/sunny" />
        <record value="1" file="photos/dynamic/blurred stadium/night" />
      </list>
      <!-- PROP_ID (for random seed)-->
      <record id="object_property" get_property="id  " set_property="valu"/>
    </widget>
    
    </container>

	<container>
		<layout class="arrange_horizontal_attachment" layout="-1,-8,-6,-1" offset="0" gap="0"/>
		<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

		<widget class="spacer" />

		<!-- Logo/Portrait -->

		<widget class="object_portrait_picture" id="log1" image_alignment="bottom" scale_picture="true" keep_aspect_ratio="true" wants_mouse_events="false">
			<!-- PROP_PERSON -->
			<record id="object_property" get_property="Pers" set_property="objt"/>
		</widget>

		<container>
			<layout class="arrange_vertical_attachment" layout="-1,-3,-1" offset="0" gap="0"/>
			<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

			<widget class="spacer" />

			<!-- Logo/Portrait -->
			<widget class="object_portrait_picture" id="log2" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" wants_mouse_events="false">
				<!-- PROP_TEAM -->
				<record id="object_property" get_property="Ttea" set_property="objt"/>
			</widget>

			<widget class="spacer" />

		</container>

		<widget class="spacer" />

	</container>
</panel>