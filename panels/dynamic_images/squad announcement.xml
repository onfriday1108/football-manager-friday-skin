<panel>
	    <layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

	<container id="laye" class="client_object_viewer_xml_panel">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

		<!-- PROP_TEAM -->
		<record id="object_property" get_property="Ttea" set_property="objt"/>

		<!-- Background image coloured to team -->
		<widget class="picture" id="bak1" file="photos/dynamic/generic/bg" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true">
			<!-- PROP_BACKGROUND_COLOUR -->
			<record id="object_property" get_property="bkcl" set_property="rrep"/>
		</widget>

		<!-- Shading image -->
		<widget class="picture" id="shad" file="photos/dynamic/squad/overlay" scale_picture="true" keep_aspect_ratio="true"/>
	</container>

	<container id="horC">
		<layout class="arrange_vertical_attachment" layout="-1, -3, -1" offset="0" gap="0"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

		<widget class="spacer" />

		<container>
			<layout class="arrange_horizontal_attachment" layout="-2, -4, -2" offset="0" gap="0"/>
			<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

			<!-- Logo/Portrait -->
			<widget class="spacer" />

			<widget class="object_portrait_picture" id="logo" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" wants_mouse_events="false">
				<!-- PROP_TEAM -->
				<record id="object_property" get_property="Ttea" set_property="objt"/>
			</widget>

			<widget class="spacer" />

		</container>

		<widget class="spacer" />

	</container>
</panel>