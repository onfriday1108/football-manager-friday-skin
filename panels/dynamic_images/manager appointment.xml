<panel>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

	<!-- Background (not really needed here?)-->
	<widget class="picture" id="bgim" file="photos/dynamic/appointment/bg" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true"/>

	<widget class="picture" id="othl" file="photos/dynamic/appointment/other logos" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true"/>

	<!-- Sponsor boards coloured to teams colours -->
	<container class="client_object_viewer_xml_panel" id="spon">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

		<!-- PROP_TEAM -->
		<record id="object_property" get_property="Ttea" set_property="objt"/>

		<!-- Board colour-->
		<widget class="picture" id="bak2" file="photos/dynamic/appointment/primary colours" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true">
			<!-- PROP_BACKGROUND_COLOUR -->
			<record id="object_property" get_property="oDCn" set_property="rrep"/>
		</widget>
	</container>

	<widget class="picture" id="bgim" file="photos/dynamic/appointment/white logos" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true"/>

	<!-- Shading image -->
	<widget class="picture" id="shad" file="photos/dynamic/appointment/lighting" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true"/>

	<container>
		<layout class="arrange_horizontal_attachment" layout="-1,-15,-1,-10,-2" offset="0" gap="0"/>
		<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

		<widget class="spacer" />
		<!-- Logo/Portrait -->
		<widget class="object_portrait_picture" id="log1" image_alignment="centre_x,bottom" scale_picture="true" keep_aspect_ratio="true" wants_mouse_events="false">
			<!-- PROP_PERSON -->
			<record id="object_property" get_property="Pers" set_property="objt"/>
		</widget>
		<widget class="spacer" />
		<container>
			<layout class="arrange_vertical_attachment" layout="-1,-3,-1" offset="0" gap="0"/>
			<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

			<widget class="spacer" />
			<!-- Logo/Portrait -->
			<widget class="object_portrait_picture" id="log2" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" wants_mouse_events="false">
				<!-- PROP_TEAM -->
				<record id="object_property" get_property="Ttea" set_property="objt"/>
			</widget>
			<widget class="spacer" />
		</container>
		<widget class="spacer" />
	</container>

</panel>