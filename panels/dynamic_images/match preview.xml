<panel>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

	<!-- Background image -->
	<container class="client_object_viewer_xml_panel" id="bgim">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>
		<!-- PROP_TEAM -->
		<record id="object_property" get_property="Ttea" set_property="objt"/>

		<widget class="picture" id="CoPi" file="photos/dynamic/generic/bg" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true">
			<!-- PROP_BACKGROUND_COLOUR - red replacement-->
			<record id="object_property" get_property="bkcl" set_property="rrep"/>
		</widget>
	</container>

	<!-- overlay -->
	<widget class="picture" id="ssha" file="photos/dynamic/match preview/shading" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true"/>

	<container>
		<layout class="arrange_vertical_attachment" layout="-4,-9,-4" offset="0" gap="0"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

		<widget class="spacer" />

		<container>
			<layout class="arrange_horizontal_attachment" layout="-3,-10,-2,-3,-2,-10,-3" offset="0" gap="0"/>
			<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

			<widget class="spacer" />
			<!-- Logo/Portrait -->
			<widget class="object_portrait_picture" id="log1" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" wants_mouse_events="false">
				<!-- PROP_TEAM -->
				<record id="object_property" get_property="Ttea" set_property="objt"/>
			</widget>
			<widget class="spacer" />
			<widget class="text" alignment="centre,auto_fit" style="bold">
				<translation id="text" translation_id="242324" type="use" value="v[versus]" />
			</widget>
			<widget class="spacer" />
			<widget class="object_portrait_picture" id="log2" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" wants_mouse_events="false">
				<!-- PROP_OTHER_TEAM -->
				<record id="object_property" get_property="ottm" set_property="objt"/>
			</widget>
			<widget class="spacer" />
		</container>
		<widget class="spacer" />
	</container>
</panel>