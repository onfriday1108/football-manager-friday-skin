<!-- XML for the KIT_ICON widget used as a dynamic image for news items -->
<panel>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

	<integer id="kit_path" value="zoomed/large"/>

	<!-- Background image -->
	<widget class="picture" id="bgim" file="photos/dynamic/back of shirt/bg" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true"/>
	<!-- Coloured overlay -->
	<widget class="picture" id="nsci" file="photos/dynamic/back of shirt/shirt" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true"/>
	<!-- Shirt shading overlay -->
	<widget class="picture" id="ssha" file="photos/dynamic/back of shirt/shirt shading" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true"/>

	<container>
		<layout class="arrange_vertical_attachment" layout="-1,-3,-9, -1" offset="0" gap="0" />
		<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

		<widget class="spacer"/>

		<!--Name of the player: This is hidden on the player stats panel-->
		<widget class="text" id="bnm2" alignment="centre,auto_fit" font="fonts/kit name"/>

		<!-- player number -large -->

		<widget class="picture" id="bNUM" image_alignment="centre,auto_fit"/>
		<widget class="spacer"/>
	</container>
	<!-- Shirt shading overlay -->
	<!--<widget class="picture" id="ligh" file="photos/dynamic/back of shirt/light" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true"/>-->

</panel>
