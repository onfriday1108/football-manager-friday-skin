<panel id="snln" width="400">

	<attachment_group class="vertical_arrange_autosize" horizontal_alignment="horizontal"  />

	<!-- add custom icon to top right corner of dialog -->
	<widget class="picture" id="cico" file="icons/dialog/bookmarks" auto_size="all" embed_in_frame="true">
		<layout class="stick_to_sides_attachment" alignment="right,top" inset="0" embed_in_frame="true" />
	</widget>

	<!-- table containing Username and password text boxes -->
	<widget class="table" id="shtb" mode="0" layout="-1,-2" auto_size_rows="true" fixed_size_rows="false" auto_size="vertical" row_spacing="4">

		<list id="column_table_properties">
			<record index="0" sort_disabled="true" column_alignment="left,centre_y" />
		</list>

		<widget row="0" col="0" id="usTB" class="label" auto_size="vertical">
			<translation id="text" translation_id="249646" type="use" value="User Name" />
		</widget>
		<widget row="0" col="1" class="edit_box" id="user" hide_text="false" auto_size="vertical" maximum_width="70">
			<flags id="return_event" value="rsnl" />
		</widget>

		<widget row="1" col="0" class="label" auto_size="vertical">
			<translation id="text" translation_id="247149" type="use" value="Password" />
		</widget>
		<widget row="1" col="1" class="edit_box" id="pass" hide_text="true" auto_size="vertical" maximum_width="70">
			<flags id="return_event" value="rsnl" />
		</widget>
	</widget>

	<!-- row of buttons -->
	<widget class="container" id="btns">
		<layout class="fit_children_attachment" alignment="vertical" offset="0" />
		<layout class="arrange_horizontal_attachment" alignment="left,extend" offset="0" />
		<layout class="stick_to_sides_attachment" alignment="bottom" inset="0" apply_to_children="true" />

		<!-- row of buttons -->
		<container id="btns" file="ok cancel buttons" />

	</widget>

</panel>