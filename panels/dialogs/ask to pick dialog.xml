<panel id="dlog" width="900">
	<translation id="title" translation_id="344655" type="use" value="Quick Pick[COMMENT - team screen team selection, contains the former Ask To Pick menu but also acts as a standalone button which picks the team, renamed for accuracy]"/>

	<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_inset="4"/>
	

	<container>
		<attachment_group class="horizontal_arrange_vertical_autosize_centre" horizontal_alignment="right,extend" />

		<widget class="text" height="30" alignment="left,centre_y" font="title" colour="faded text">
			<translation id="text" translation_id="336207" type="use" value="Choose players from[COMMENT - team screen team selection; Ask to pick advanced dialog; which squad to pick the selection from]"/>
		</widget>

		<widget class="text" auto_size="horizontal" height="30" alignment="left,centre_y" colour="faded text">
			<translation id="text" translation_id="336667" type="use" value="Staff member asked to pick[COMMENT - team screen team selection; Ask to pick advanced dialog; which member of staff to do the picking]"/>
		</widget>

		<widget class="subtle_popup_button" id="stlt" select_event="chco" fixed="false" auto_size="all" />
	</container>

	<widget class="horizontal_divider"/>

	<container id="sqdl">
		<attachment_group class="horizontal_arrange_vertical_autosize_centre" horizontal_layout="-1" horizontal_offset="0" vertical_offset="0" />

		<widget class="filter_panel" id="filp" file="filter panel no title" auto_size="vertical" appearance="" />
	</container>

	<!-- player age group filter panel -->
	<container height="31">
		<attachment_group class="horizontal_arrange" horizontal_layout="-1" horizontal_offset="0" vertical_alignment="vertical" vertical_inset="0" />

		<container id="agbx" height="31">
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
		</container>
	</container>

	<!-- player minutes played filter panel -->
	<container height="31">
		<attachment_group class="horizontal_arrange" horizontal_layout="-1" horizontal_offset="0" vertical_alignment="vertical" vertical_inset="0" />

		<container id="mpbx" height="31">
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
		</container>
	</container>


	<!-- player fitness filter panel -->
	<container height="31">
		<attachment_group class="horizontal_arrange" horizontal_layout="-1" horizontal_offset="0" vertical_alignment="vertical" vertical_inset="0" />

		<container id="pfbx" height="31">
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
		</container>
	</container>

	<!-- player match sharpness filter panel -->
	<container height="31">
		<attachment_group class="horizontal_arrange" horizontal_layout="-1" horizontal_offset="0" vertical_alignment="vertical" vertical_inset="0" />

		<container id="msbx" height="31">
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
		</container>
	</container>

	<!-- person squad status filter panel -->
	<container height="31">
		<attachment_group class="horizontal_arrange" horizontal_layout="-1" horizontal_offset="0" vertical_alignment="vertical" vertical_inset="0" />


		<container id="ssbx" height="31">
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
		</container>
	</container>

	<container height="8"/>

	<!-- bottom row of buttons -->
	<container>
		<attachment_group class="horizontal_arrange_vertical_autosize" horizontal_alignment="left,extend" horizontal_offset="0" vertical_inset="0" />

		<widget class="icon_button" id="clea" auto_size="all">
			<translation id="text" translation_id="230013" type="use" value="Reset"/>
			<record id="click_event">
				<flags id="event_id" value="clea"/>
			</record>
		</widget>

		<container>
			<attachment_group class="button_arrangement_right" />

			<widget class="primary_icon_tick_button" id="ok">
				<translation id="text" translation_id="333982" type="use" value="Pick[COMMENT: button label to allow the user to pick a player in a position]"/>
			</widget>

			<widget class="primary_icon_tick_button" id="srwp">
				<translation id="text" translation_id="346838" type="use" value="Set Guidelines Without Picking[COMMENT: team screen team selection; Ask to pick advanced dialog; button label to save rules but not actually pick players]"/>
				<record id="click_event">
					<flags id="event_id" value="srwp"/>
				</record>
			</widget>

			<widget class="button" id="canc" auto_size="all">
				<translation id="text" translation_id="229828" type="use" value="Cancel"/>
			</widget>

		</container>

	</container>

</panel>