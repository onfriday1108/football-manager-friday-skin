<panel width="940" height="600">
	<flags id="mbxc" value="green"/>
	<flags id="ubxc" value="subtle_box_background"/>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" />

	<container class="inner_box_no_margin" id="main" absorb_click_events="true">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

		<container class="container_with_mouse_events" id="bacb" absorb_click_events="true"/>

		<container>

			<layout class="arrange_vertical_attachment" alignment="top,extend" offset="8" gap="8" />
			<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="8" />

			<container height="30">
				<layout class="arrange_horizontal_attachment" alignment="left" offset="0" gap="-9" />
				<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />

				<widget class="radio_toggle_switch_left" id="quib" click_event="eqmd" auto_size="horizontal">
					<translation id="text" translation_id="441056" type="use" value="Quick[COMMENT: FR 21122, person search type]" />
				</widget>

				<widget class="radio_toggle_switch_right" id="advb" click_event="eamd" auto_size="horizontal">
					<translation id="text" translation_id="441057" type="use" value="Advanced[COMMENT: FR 21122, person search type]" />
				</widget>

			</container>

			<container>
				<layout class="arrange_vertical_attachment" alignment="bottom,extend" offset="0" gap="0" />
				<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

				<container>
					<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

					<container id="quik">
						<layout class="arrange_vertical_attachment" alignment="bottom,extend" offset="0" gap="0" />
						<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

						<container>
							<layout class="grid_layout_attachment" row_layout="250,-1" mode="auto" vertical_gap="6" vertical_offset_start="0" vertical_offset_end="6">
								<list id="column_layout">
									<record>
										<string id="column_layout" value="160,270,-1" />
										<integer id="horizontal_offset" value="0" />
										<integer id="horizontal_gap" value="6" />
									</record>
									<record>
										<string id="column_layout" value="-1" />
										<integer id="horizontal_offset" value="0" />
									</record>
								</list>
							</layout>

							<!--first row-->
							<container class="inner_subtle_box" id="posb">
								<translation id="title" translation_id="230082" type="use" value="Positions" />
								<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

								<container class="main_contrast_box" red_replacement="pitch_box_background">
									<layout class="arrange_vertical_attachment" alignment="bottom,extend" offset="4" gap="4" />
									<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="4" />

									<widget class="pitch_with_all_positions" id="ppip" vertical="true" pitch_show_names="false" pitch_allow_multiple_select_no_modifiers="true" pitch_touchline_width_percentage="0" pitch_vertical_padding="8" pitch_horizontal_padding="0" pitch_base_appearance="" pitch_pattern="ui circles" line_width="1" pitch_draw_goals="false" pitch_alignment="centre,can_scale" select_event="esfp" absorb_click_events="true"/>

									<container height="30">
										<layout class="arrange_horizontal_attachment" layout="-1,-1" offset="0" gap="1" />
										<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0" />

										<widget class="button" id="sapb" click_event="sapo" appearance="buttons/custom/tactics/pitch switch/left/button" size="small">
											<translation id="text" translation_id="247116" type="use" value="Select All" />
										</widget>

										<widget class="button" id="clpb" click_event="cpos" appearance="buttons/custom/tactics/pitch switch/right/button" size="small">
											<translation id="text" translation_id="229717" type="use" value="Clear" />
										</widget>

									</container>

								</container>

							</container>

							<container>
								<layout class="arrange_vertical_attachment" layout="-1,-1,-1" offset="0" gap="6" />
								<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

								<container class="inner_subtle_box" id="rolb">
									<translation id="title" translation_id="298050" type="use" value="Role" />

									<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

									<widget class="popup_button" id="role" auto_size="vertical" alignment="left,centre_y" select_event="eROc">
										<translation id="text" translation_id="298050" type="use" value="Role" />

									</widget>

								</container>

								<container class="inner_subtle_box" id="ageb">
									<translation id="title" translation_id="227770" type="use" value="Age[comment - person age]" />
									<layout class="centre_in_parent_attachment" alignment="vertical" offset="0" apply_to_children="true" />
									<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

									<container height="30">
										<layout class="arrange_horizontal_attachment" layout="-1,4,-1" gap="4" offset="0" />
										<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0" />


										<widget class="selection_list" id="mina" use_menu_for_plus_minus="false" height="30" select_event="mias" />

										<widget class="label" auto_size="horizontal" height="30">
											<translation id="text" translation_id="233089" type="use" value="-" />
										</widget>

										<widget class="selection_list" id="maxa" use_menu_for_plus_minus="false" height="30" select_event="maas" />

									</container>

									<widget class="spacer" />

								</container>


								<container class="inner_subtle_box" id="natb">
									<translation id="title" translation_id="227841" type="use" value="Nationality" />
									<layout class="centre_in_parent_attachment" alignment="vertical" offset="0" apply_to_children="true" />
									<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

									<container height="30">
										<layout class="arrange_horizontal_attachment" alignment="left,extend" offset="0" gap="2" />
										<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />

										<widget class="popup_button" id="nati" auto_size="vertical" alignment="left,centre_y" select_event="eNAc">
											<translation id="text" translation_id="227841" type="use" value="Nationality" />
										</widget>


									</container>

									<widget class="spacer" />

								</container>

							</container>

							<container class="inner_subtle_box" id="attb">
								<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
								<widget class="person_filter_panel" id="psfp" draw_title="false" file="filter_panels/person search dialog filter panel">

								</widget>

							</container>

							<!--second row-->
							<container id="conb">
								<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
								<container class="inner_subtle_box">
									<translation id="title" translation_id="364209" type="use" value="Additional Conditions[COMMENT: FR 6137, scout assignement dialog text, search conditions]" />

									<!-- embedded buttons -->
									<container id="btns" height="26" embed_in_frame="true">
										<attachment_group class="title_embedded_panel_right" />

										<widget class="popup_button" id="addc" auto_size="all" fixed="true" embed_in_frame="true">
											<event id="menu_layout_notification_event" event_id="adtg" event_target="addc" />
										</widget>


									</container>

									<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />


									<!-- table containing editable filter rules -->
									<widget class="filter_table" id="otct" show_compare_rules="true" auto_update_filter="true" mode="fill_rows" row_spacing="2" />

								</container>
							</container>


						</container>


					</container>

					<container id="advc" file="person/person search filter advanced">

					</container>
				</container>

				<container height="30">
					<layout class="arrange_horizontal_attachment" alignment="left,extend" offset="0" gap="2" />
					<layout class="stick_to_sides_attachment" alignment="left" inset="0" />
					<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />

					<widget class="popup_button" auto_size="horizontal" id="seop" fixed="true" icon="icons/16px/settings">
						<global id="hidden" name="platform_is_stadia"/>
					</widget>

					<container >
						<layout class="arrange_horizontal_attachment" alignment="right" offset="0" gap="2" />
						<layout class="stick_to_sides_attachment" alignment="right" inset="0" />
						<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />

						<widget class="button" id="clea" auto_size="horizontal" height="30" click_event="clpf">
							<translation id="text" translation_id="229717" type="use" value="Clear" />
						</widget>

						<widget class="widget_popup_button" id="plsf" widget_type="person_search_filter_popup_panel" auto_size="horizontal" height="30" appearance="buttons/subtle/normal/button"  popup_alignment="right,top">
							<record id="widget_properties" file="filter_panels/person search filter popup" width="350"/>
							<translation id="text" translation_id="343652" type="use" value="Exclude[COMMENT: offer to clubs panel title; exclusion options for offer to clubs are contained within]" />
						</widget>

						<widget class="primary_icon_button" id="ok  " auto_size="horizontal" icon="icons/16px/tick" height="30" controller_button="y_button">
							<translation id="text" translation_id="229829" type="use" value="Ok" />
							<record id="click_event">
								<flags id="event_id" value="ok  " />
							</record>
						</widget>

					</container>

				</container>

			</container>
		</container>
	</container>
</panel>