<panel width="600">
	<attachment_group class="vertical_arrange_autosize" />

	<container>
		<attachment_group class="vertical_arrange_autosize" vertical_offset="8" horizontal_inset="8" vertical_gap="20" />
		
		<widget class="table" id="tabl" layout="-2,-1" mode="fill_rows, stripe_rows, keyboard, select_rows, show_bullets,dont_allow_empty_selection" auto_size="vertical" select_event="Eptc">

			<record id="default_properties">
				<flags id="alignment" value="left,centre_y" />
			</record>

			<!-- column properties -->
			<list id="column_widget_properties">
				<record indx="1" colour="faded text" />
			</list>
			
			
		</widget>

		<container class="inner_subtle_box" id="agfC">
			<attachment_group class="vertical_arrange_autosize" vertical_alignment="top" vertical_gap="10" />
			<translation id="title" translation_id="466494" type="use" value="Agent Feedback:[COMMENT: FR 22718; transfer offer panel; button label to initiate conversation to persuade player to leave club]" />
			
			<widget class="text" id="agfb" auto_size="vertical" multiline="true">
			</widget>

			<container>
				<attachment_group class="horizontal_arrange_vertical_autosize" vertical_alignment="top" />

				<widget class="icon_button" id="pcpt" auto_size="all" file="icons/16px/speech bubble">
					<translation id="text" translation_id="491888" type="use" value="Persuade to accept reduced playing time[COMMENT: AREA: Interaction; SUB-AREA: Playing Time; FR-BN: n/a; TONE: Informal; CHARLIMIT: None; REF-ID: n/a; NOTE: button text to enter into conversation with player]" />
				</widget>
				
			</container>
			
		</container>
		
	</container>


	<!-- row of buttons -->
	<container id="btns">
		<attachment_group class="button_arrangement_right" />

		<widget class="primary_icon_tick_button" id="ok">
			<translation id="text" translation_id="491889" type="use" value="Change Playing Time[COMMENT: AREA: Playing Time; SUB-AREA: Player Happiness; FR: 27982; TONE: Formal; CHARLIMIT: None; REF-ID: n/a; NOTE: Indicates how much playing time a player is getting in status form, eg Key Player, Squad Option]" />
			<layout class="autosize_attachment" />
		</widget>

		<widget class="button" id="canc" auto_size="all">
			<translation id="text" translation_id="229828" type="use" value="Cancel" />
		</widget>
	</container>
	
</panel>