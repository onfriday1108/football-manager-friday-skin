<panel id="dlog" width="900" height="750">
	<translation id="title" translation_id="414559" type="use" value="Custom Setup[COMMENT: how to system; help string]" />
	<layout class="arrange_vertical_attachment" alignment="bottom,extend" offset="4" gap="6" />
	<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="4" />

	<container class="scrolling_box">
		<container>
			<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_alignment="horizontal" horizontal_inset="0" />

			<container class="main_box" id="dbsc">
				<translation id="title" translation_id="247401" type="use" value="Database Size" />
				<layout class="fit_children_attachment" alignment="vertical" />
				<layout class="arrange_horizontal_attachment" alignment="left" gap="25" />

				<widget class="radio_button" id="dbss" group="0" auto_size="all">
					<translation id="text" translation_id="255041" type="use" value="Small[COMMENT: database size menu item text]" />
					<layout class="centre_in_parent_attachment" alignment="vertical" />
					<record id="click_event">
						<flags id="event_id" value="sldb" />
						<flags id="size" value="0" />
					</record>
				</widget>

				<widget class="radio_button" id="dbsm" group="0" auto_size="all">
					<translation id="text" translation_id="255042" type="use" value="Medium[COMMENT: database size menu item text]" />
					<layout class="centre_in_parent_attachment" alignment="vertical" />
					<record id="click_event">
						<flags id="event_id" value="sldb" />
						<flags id="size" value="1" />
					</record>
				</widget>

				<widget class="radio_button" id="dbsl" group="0" auto_size="all">
					<translation id="text" translation_id="255043" type="use" value="Large[COMMENT: database size menu item text]" />
					<layout class="centre_in_parent_attachment" alignment="vertical" />
					<record id="click_event">
						<flags id="event_id" value="sldb" />
						<flags id="size" value="2" />
					</record>
				</widget>
			</container>

			<container class="main_box" id="loca">
				<translation id="text" translation_id="291323" type="use" value="Location[COMMENT: where a person currently is; e.g. on holiday, absent, on international duty]" />
				<layout class="fit_children_attachment" alignment="vertical" offset="0" />
				<layout class="stick_to_sides_attachment" alignment="horizontal,top" apply_to_children="true" inset="0" />

				<container embed_in_frame="true">
					<attachment_group class="title_embedded_panel_right" />

					<!-- the profile menu -->
					<widget class="embedded_popup_button" id="adlc" sele="adit" auto_size="horizontal" height="30" fixed="true" embed_in_frame="true">
						<translation id="text" translation_id="251402" type="use" value="Add[COMMENT: Add button on dialogs]" />
					</widget>
				</container>

				<container id="lcbx">
					<layout class="fit_children_attachment" alignment="vertical,extend" />
					<layout class="arrange_horizontal_attachment" alignment="left" wrap_widgets="true" />
					<layout class="stick_to_sides_attachment" alignment="top" />
					<!-- items dynamically added in code -->
				</container>
			</container>

			<container class="main_box" id="cont">
				<translation id="title" translation_id="291532" type="use" value="Continents[COMMENT: search filter dialog region list submenu]" />
				<layout class="fit_children_attachment" alignment="vertical" offset="0" />
				<layout class="stick_to_sides_attachment" alignment="horizontal,top" apply_to_children="true" inset="0" />

				<container embed_in_frame="true">
					<attachment_group class="title_embedded_panel_right" />

					<!-- the profile menu -->
					<widget class="embedded_popup_button" id="adcn" sele="adit" auto_size="horizontal" height="30" fixed="true" embed_in_frame="true">
						<translation id="text" translation_id="251402" type="use" value="Add[COMMENT: Add button on dialogs]" />
					</widget>
				</container>

				<container id="cnbx">
					<layout class="fit_children_attachment" alignment="vertical,extend" />
					<layout class="arrange_horizontal_attachment" alignment="left" wrap_widgets="true" />
					<layout class="stick_to_sides_attachment" alignment="top" />
					<!-- items dynamically added in code -->
				</container>
			</container>

			<container class="main_box" id="rgns">
				<translation id="title" translation_id="231444" type="use" value="Regions[COMMENT: search filter dialog region list submenu]" />
				<layout class="fit_children_attachment" alignment="vertical" offset="0" />
				<layout class="stick_to_sides_attachment" alignment="horizontal,top" apply_to_children="true" inset="0" />

				<container embed_in_frame="true">
					<attachment_group class="title_embedded_panel_right" />

					<!-- the profile menu -->
					<widget class="embedded_popup_button" id="adrg" sele="adit" auto_size="horizontal" height="30" fixed="true" embed_in_frame="true">
						<translation id="text" translation_id="251402" type="use" value="Add[COMMENT: Add button on dialogs]" />
					</widget>
				</container>

				<container id="rgbx">
					<layout class="fit_children_attachment" alignment="vertical,extend" />
					<layout class="arrange_horizontal_attachment" alignment="left" wrap_widgets="true" />
					<layout class="stick_to_sides_attachment" alignment="top" />
					<!-- items dynamically added in code -->
				</container>
			</container>

			<container class="main_box" id="ntns">
				<translation id="title" translation_id="231443" type="use" value="Nations[COMMENT: search filter dialog 'other' nationality list submenu]" />
				<layout class="fit_children_attachment" alignment="vertical" offset="0" />
				<layout class="stick_to_sides_attachment" alignment="horizontal,top" apply_to_children="true" inset="0" />

				<container embed_in_frame="true">
					<attachment_group class="title_embedded_panel_right" />

					<!-- the profile menu -->
					<widget class="widget_popup_button" id="adnt" widget_type="database_size_nation_selector_panel" auto_size="horizontal" height="30" fixed="true" embed_in_frame="true" appearance="buttons/subtle/normal/button">
						<translation id="text" translation_id="251402" type="use" value="Add[COMMENT: Add button on dialogs]" />
					</widget>
				</container>

				<container id="ntbx">
					<layout class="fit_children_attachment" alignment="vertical,extend" />
					<layout class="arrange_horizontal_attachment" alignment="left" wrap_widgets="true" />
					<layout class="stick_to_sides_attachment" alignment="top" />
					<!-- items dynamically added in code -->
				</container>
			</container>

			<container class="main_box" id="dvns">
				<translation id="title" translation_id="247185" type="use" value="Divisions" />
				<layout class="fit_children_attachment" alignment="vertical" offset="0" />
				<layout class="stick_to_sides_attachment" alignment="horizontal,top" apply_to_children="true" inset="0" />

				<container embed_in_frame="true">
					<attachment_group class="title_embedded_panel_right" />

					<!-- the profile menu -->
					<widget class="embedded_popup_button" id="addv" sele="adit" auto_size="horizontal" height="30" fixed="true" embed_in_frame="true">
						<translation id="text" translation_id="251402" type="use" value="Add[COMMENT: Add button on dialogs]" />
					</widget>
				</container>

				<container id="dvbx">
					<layout class="fit_children_attachment" alignment="vertical,extend" />
					<layout class="arrange_horizontal_attachment" alignment="left" wrap_widgets="true" />
					<layout class="stick_to_sides_attachment" alignment="top" />
					<!-- items dynamically added in code -->
				</container>
			</container>

			<container class="main_box" id="filt">
				<translation id="title" translation_id="412445" type="use" value="Conditions[COMMENT: fantasy draft database filter screen; conditions for retaining players]" />
				<layout class="fit_children_attachment" alignment="vertical" offset="0" />
				<layout class="stick_to_sides_attachment" alignment="horizontal,top" apply_to_children="true" inset="0" />

				<container embed_in_frame="true">
					<attachment_group class="title_embedded_panel_right" />

					<!-- the add rule menu -->
					<widget class="embedded_popup_button" id="addf" sele="inrl" auto_size="horizontal" height="30" fixed="true" embed_in_frame="true">
						<translation id="text" translation_id="251402" type="use" value="Add[COMMENT: Add button on dialogs]" />
					</widget>
				</container>

				<container class="filter_table" id="fcrt" auto_size="vertical" allow_filter_type_change="false" show_move_buttons="false" />
			</container>
		</container>
	</container>

	<!-- 2nd bottom container showing person count -->
	<container class="inner_subtle_box_no_margin">
		<layout class="centre_in_parent_attachment" alignment="vertical" offset="0" apply_to_children="true" />
		<layout class="fit_children_attachment" alignment="vertical" offset="0" />
		<layout class="arrange_horizontal_attachment" alignment="right" offset="6" />

		<widget class="text" auto_size="all" size="large">
			<translation id="text" translation_id="292332" type="use" value="Approximate Player Count[COMMENT: nation league selection panel; label showing approximate number of players]" />
		</widget>
		<widget class="text" auto_size="all" size="large">
			<string id="text" value=" : " />
		</widget>

		<widget class="text" id="pncn" auto_size="all" style="bold" size="large"/>
	</container>

	<!-- bottom row of buttons -->
	<container>
		<layout class="stick_to_sides_attachment" alignment="bottom" inset="0" apply_to_children="true" />
		<layout class="fit_children_attachment" alignment="vertical" offset="0" />
		<layout class="arrange_horizontal_attachment" alignment="left,extend" offset="0" />

		<widget class="icon_button" id="clea" auto_size="all">
			<translation id="text" translation_id="230013" type="use" value="Reset" />
			<record id="click_event">
				<flags id="event_id" value="clea" />
			</record>
		</widget>

		<widget class="icon_button" id="ldsu" auto_size="all">
			<global id="hidden" name="platform_is_stadia"/>
			<translation id="text" translation_id="344144" type="use" value="Load Custom Setup[COMMENT: Database size dialog; Load setup button label]" />
			<record id="click_event">
				<flags id="event_id" value="ldsu" />
			</record>
		</widget>

		<widget class="icon_button" id="svsu" auto_size="all">
			<global id="hidden" name="platform_is_stadia"/>
			<translation id="text" translation_id="344742" type="use" value="Save Custom Setup[COMMENT: Database size dialog; Save setup button label]" />
			<record id="click_event">
				<flags id="event_id" value="svsu" />
			</record>
		</widget>

		<container>
			<layout class="stick_to_sides_attachment" alignment="bottom" inset="0" apply_to_children="true" />
			<layout class="arrange_horizontal_attachment" alignment="right" offset="0" />
			<layout class="fit_children_attachment" alignment="vertical" offset="0" />

			<widget class="primary_icon_tick_button" id="ok  ">
				<translation id="text" translation_id="229829" type="use" value="Ok" />
			</widget>

			<widget class="button" id="canc" auto_size="all">
				<translation id="text" translation_id="229828" type="use" value="Cancel" />
			</widget>
		</container>

	</container>

</panel>