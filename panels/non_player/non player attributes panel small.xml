<panel>
	<boolean id="is_small_version" value="true"/>

	<layout class="arrange_horizontal_attachment" alignment="fill" offset="0" gap="40"/>
	<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0"/>

	<!-- Coaching panel -->
	<container id="npcn">
		<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

		<widget class="table" id="npct" mode="fill_rows, stripe_rows, printable" layout="-1, -1" row_spacing="0" row_height="18">
			<list id="column_widget_properties">
				<record indx="0" alignment="left,centre_y" spec="text"/>
				<record indx="1" alignment="right,centre_y" style="semi_bold"/>
			</list>

			<list id="column_table_properties">
				<record indx="0" left="4" sort_disabled="true"/>
				<record indx="1" right="4" sort_disabled="true"/>
			</list>
		</widget>

	</container>

	<!-- Mental properties Panel -->
	<container id="npmc">
		<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

		<widget class="table" id="npmt" mode="fill_rows, stripe_rows, printable" layout="-1, -1" row_spacing="0" row_height="18">
			<list id="column_widget_properties">
				<record indx="0" alignment="left,centre_y" spec="text"/>
				<record indx="1" alignment="right,centre_y" style="semi_bold"/>
			</list>

			<list id="column_table_properties">
				<record indx="0" left="4" sort_disabled="true"/>
				<record indx="1" right="4" sort_disabled="true"/>
			</list>
		</widget>

	</container>

</panel>