<panel>	<symbol id="chunk_container_type" value="credits_chunk_container" />		<!-- arrange items vertically - last item gets remaining space -->	<container class="main_box" force_title_borders="true" id="crtb">		<layout class="stick_to_sides_attachment" alignment="all" inset="0"/>				<!-- embedded buttons -->		<container id="btns" embed_in_frame="true">			<attachment_group class="title_embedded_panel_left"/>						<widget id="labl" class="view_menu_label" />			<widget id="view" class="view_menu_popup" sele="cvms" />		</container>				<!-- panel containing credits -->		<container class="scrolling_box" id="crsb">			<!-- sides of box should stick to left side of screen -->			<layout class="stick_to_sides_attachment" alignment="all" inset="0"/>			<boolean id="save_session_state" value="true"/>			<!-- credits go into a box inside the scrolling box -->			<container id="scbx">				<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_inset="0" />			</container>		</container>	</container></panel>