<panel width="400" height="300">

	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

	<container class="standard_popup_box">
		<layout class="arrange_vertical_attachment" alignment="top,extend" offset="10" gap="4"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" inset="10" apply_to_children="true"/>

		<!--continent selector-->
		<container height="30">
			<layout class="arrange_horizontal_attachment" alignment="left" offset="0" gap="4"/>
			<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

			<widget class="label" alignment="left,centre_y" auto_size="horizontal">
				<translation id="text" translation_id="348798" type="use" value="Countries in[COMMENT: label for a pop up button that will allow the user to select continents to filter a nation list by]"/>
			</widget>
			<widget class="popup_button" id="conS" auto_size="horizontal"/>
		</container>

		<!--nation table-->
		<widget class="table" id="natt" layout="-1,-1" mode="fill_rows, stripe_rows" fixed_size_rows="true" auto_size_rows="false" row_height="28"/>
	</container>

</panel>