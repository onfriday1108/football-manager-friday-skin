<panel>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

	<boolean id="should_force_refresh" value="true"/>

	<container>
		<layout class="arrange_horizontal_attachment" layout="53, -1" offset="0" />
		<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

		<container>
			<layout class="stick_to_sides_attachment" alignment="all" inset="5" apply_to_children="true"/>

			<!-- Logo -->
			<widget class="object_portrait_picture" scale_picture="true" offset="20" width="40" image_alignment="centre">
				<record id="object_property" get_property="comp" set_property="objt"/>
			</widget>
		</container>

		<!-- Text -->
		<container>
			<layout class="arrange_vertical_attachment" alignment="middle"/>
			<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

			<widget class="text" alignment="left,centre_y" auto_size="vertical" multiline="true" style="semi_bold" auto_size_maximum_height="42">
				<record id="object_property" get_property="text" dont_set_object="true"/>
			</widget>
			<!-- Date -->
			<widget class="game_formatted_label" id="datf" alignment="left,centre_y" auto_size="vertical" multiline="true" format="[%date#1-long]" alternate_format="[%date#1-short_day]" size="small" colour="faded text">
				<record id="object_property" get_property="date" dont_set_object="true"/>
			</widget>
		</container>
	</container>
</panel>
