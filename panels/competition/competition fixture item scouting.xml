<panel id="fxco">
  <translation id="title" translation_id="247231" type="use" value="Fixture Competition" />

  <!-- Note: Height is defined statically on many of these widgets and there is some magic going on with padding widgets-->
	<attachment_group class="horizontal_arrange_vertical_autosize_centre" horizontal_layout="50, -1, 60, 40, 60, -1, 150" horizontal_gap="0" horizontal_offset="6"/>
  

  <!-- Kick off time-->
  <widget class="button" appearance="boxes/custom/result/time/paper" colour="white" alignment="centre" wants_mouse_events="false" auto_size="vertical">
    <record id="object_property" get_property="time" set_property="text" />
  </widget>

  <!-- Home team-->
  <widget class="team_button" icon_enabled="false" colour="text" alignment="right,top" auto_size="all">
    <record id="object_property" get_property="Ttea" set_property="valu" />
  </widget>

  <!-- Home team logo -->
  <widget class="object_portrait_picture" scale_picture="true" alignment="centre_x,top" image_alignment="centre" height="35">
    <record id="object_property" get_property="Ttea" set_property="objt" />
  </widget>

  <widget class="button" appearance="boxes/custom/result/standard/paper" red_replacement="bg lighter" size="large" alignment="centre" auto_size="vertical" colour="text">
    <translation id="text" type="use" translation_id="242324" value="v[versus]" />
  </widget>

  <!-- Away team logo -->
  <widget class="object_portrait_picture" scale_picture="true" alignment="centre_x,top" image_alignment="centre" height="35">
    <record id="object_property" get_property="Topp" set_property="objt" />
  </widget>

  <!-- Away team -->
  <widget class="team_button" icon_enabled="false" colour="text" auto_size="all">
    <record id="object_property" get_property="Topp" set_property="valu" />
  </widget>


  <widget class="popup_button" id="spop" alignment="centre" icon="icons/16px/search" icon_alignment="left,centre_y" select_event="esms" height="30"> 
  

    <record id="object_property">
      <list id="get_properties">
        <record>
          <integer id="get_property" value="itms" />
          <integer id="set_property" value="itms" />
        </record>
        <record>
          <integer id="get_property" value="MPac" />
          <integer id="set_property" value="slct" />
        </record>
      <record>
          <integer id="get_property" value="fixi" />
          <integer id="set_property" value="fixi" />
        </record>
      </list>
    </record>
  </widget>

</panel>