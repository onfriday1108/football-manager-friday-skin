<panel save_session_state="true">
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

	<!-- main table -->
	<container class="main_box">
		<layout class="arrange_vertical_attachment" alignment="bottom,extend" />
		<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" />

		<!-- buttons area -->
		<container id="btns" embed_in_frame="true">
			<attachment_group class="title_embedded_panel_left" />

			<widget class="view_menu_label">
				<translation id="text" translation_id="248402" type="use" value="Drafts" />
			</widget>

			<!-- year menu -->
			<widget class="view_menu_popup" id="year" sele="year" />
		</container>

		<!-- table -->
		<widget class="table" id="tabl" mode="fill_rows, stripe_rows" layout="50, 50, -2, -2, -1, 50, -2, -2" auto_size_rows="true">
			<list id="headings">
				<record alignment="left,centre_y">
					<translation id="text" translation_id="247187" type="use" value="Round" />
				</record>
				<record alignment="left,centre_y">
					<translation id="text" translation_id="247188" type="use" value="Pick" />
				</record>
				<record alignment="left,centre_y">
					<translation id="text" translation_id="227737" type="use" value="Club" />
				</record>
				<record alignment="left,centre_y">
					<translation id="text" translation_id="227966" type="use" value="Player" />
				</record>
				<record alignment="left,centre_y">
					<translation id="text" translation_id="227884" type="use" value="Position" />
				</record>
				<record alignment="left,centre_y">
					<translation id="text" translation_id="227770" type="use" value="Age[comment - person age]" />
				</record>
				<record alignment="left,centre_y">
					<translation id="text" translation_id="227841" type="use" value="Nationality" />
				</record>
				<record alignment="left,centre_y">
					<translation id="text" translation_id="453026" type="use" value="Former Club[COMMENT: FR 14170; mls draft history panel; table column header; team the player was drafted from]" />
				</record>
			</list>

			<list id="column_table_properties">
				<record indx="0" sort_disabled="true" />
				<record indx="1" sort_disabled="true" />
				<record indx="2" sort_disabled="true" />
				<record indx="3" sort_disabled="true" />
				<record indx="4" sort_disabled="true" />
				<record indx="5" sort_disabled="true" />
				<record indx="6" sort_disabled="true" />
				<record indx="7" sort_disabled="true" />
				<record indx="8" sort_disabled="true" />
			</list>

			<list id="column_widget_properties">
				<record indx="0" alignment="centre" />
				<record indx="1" alignment="centre" />
				<record indx="2" alignment="left,centre_y" />
				<record indx="3" alignment="left,centre_y" />
				<record indx="4" alignment="left,centre_y" />
				<record indx="5" alignment="left,centre_y" />
				<record indx="6" alignment="left,centre_y" />
				<record indx="7" alignment="left,centre_y" />
				<record indx="8" alignment="left,centre_y" />
			</list>
		</widget>

		<widget class="label" id="GenA" auto_size="all" alignment="left,centre_y" spec="text" colour="faded text" hidden="true">
			<translation id="text" translation_id="453027" type="use" value="*Generation Adidas Player[COMMENT: FR 14170; mls draft history panel; note to indicate drafted players with asterisk are generation adidas players]" />
		</widget>
	</container>

</panel>