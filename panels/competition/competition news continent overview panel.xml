<!-- A holding an overview box for each continent -->
<!-- Note that since continent references are constant we can set them directly (less code, yay!)-->
<panel>
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

	<container class="vertical_arrange_container" alignment="fill" inset="0" offset="0" draw_horizontal_dividers="true">
		<global id="gap" name="ui.main_box_gap"/>

		<container class="horizontal_arrange_container" alignment="fill" inset="0" offset="0" draw_vertical_dividers="true">
			<global id="gap" name="ui.main_box_gap"/>

			<container class="client_object_viewer_xml_panel" file="competition/competition news continent overview selector panel">
				<record id="objt" dref="83886080"/>
			</container>
			<container class="client_object_viewer_xml_panel" file="competition/competition news continent overview selector panel">
				<record id="objt" dref="83886081"/>
			</container>
		</container>

		<container class="horizontal_arrange_container" alignment="fill" inset="0" offset="0" draw_vertical_dividers="true">
			<global id="gap" name="ui.main_box_gap"/>

			<container class="client_object_viewer_xml_panel" file="competition/competition news continent overview selector panel">
				<record id="objt" dref="83886082"/>
			</container>
			<container class="client_object_viewer_xml_panel" file="competition/competition news continent overview selector panel">
				<record id="objt" dref="83886083"/>
			</container>
		</container>

		<container class="horizontal_arrange_container" alignment="fill" inset="0" offset="0" draw_vertical_dividers="true">
			<global id="gap" name="ui.main_box_gap"/>

			<container class="client_object_viewer_xml_panel" file="competition/competition news continent overview selector panel">
				<record id="objt" dref="83886084"/>
			</container>
			<container class="client_object_viewer_xml_panel" file="competition/competition news continent overview selector panel">
				<record id="objt" dref="83886085"/>
			</container>
		</container>
	</container>
</panel>