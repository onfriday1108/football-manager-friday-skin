		<translation id="title" translation_id="260336" type="use" value="Draft Allocations[COMMENT: transfers panel; title of panel showing draft allocations]" />
		<!-- table for showing draft allocations-->
		<widget class="table" id="tabl" layout="240, -1" save_session_state="true" row_height="34">

			<flags id="mode" value="fill_rows, stripe_rows,printable,keyboard" />
