<panel>

	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

	<!-- titled box -->
	<widget class="inner_box" id="hpto" >
		<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

		<container embed_in_frame="true">
			<attachment_group class="title_embedded_panel_left" />

			<widget class="text" multiline="false" auto_size="all" font="fonts/panel_title" size="11" embed_in_frame="true">
				<translation id="text" translation_id="328526" type="use" value="PhysioRoom.com" />
			</widget>
			<widget class="label" auto_size="all" font="fonts/panel_title" size="11" embed_in_frame="true">
				<translation id="text" translation_id="328527" type="use" value="Injury League Table" />
			</widget>
		</container>

		<!-- Main table -->
		<widget class="table" id="hptb" mode="fill_rows, stripe_rows" layout="-5, 65, -6, -5, 80, 160" auto_size_rows="true" fixed_size_rows="false" row_spacing="0" save_session_state="true">

			<!-- headings -->
			<list id="headings">
				<record alignment="left,centre_y">
					<translation id="text" translation_id="229408" type="use" value="Team" />
				</record>
				<record alignment="centre">
					<translation id="text" translation_id="256674" type="use" value="Injuries[COMMENT: competition_injury_table; column header; 8 character maximum]" />
				</record>
				<record alignment="left,centre_y">
					<translation id="text" translation_id="227966" type="use" value="Player" />
				</record>
				<record alignment="left,centre_y">
					<translation id="text" translation_id="247523" type="use" value="Injury[COMMENT: Player Injury name, table header]" />
				</record>
				<record alignment="left,centre_y">
					<translation id="text" translation_id="247181" type="use" value="Date Injured" />
				</record>
				<record alignment="left,centre_y">
					<translation id="text" translation_id="247182" type="use" value="Expected Return" />
				</record>
			</list>

			<!-- column display properties -->
			<list id="column_table_properties">
				<record indx="0" id="club" left="4" alignment="top" />
				<record indx="1" id="inju" top="7" sort_ascending="false" />
				<record indx="2" id="tabl" left="0" right="0" sort_disabled="true" />
				<record indx="3" sort_disabled="true" />
				<record indx="4" sort_disabled="true" />
				<record indx="5" sort_disabled="true" />
			</list>

			<integer id="default_sort_column" value="inju" />

			<list id="column_widget_properties">
				<record indx="0" alignment="left,centre_y" />
				<record indx="1" alignment="centre_x,top" spec="text" />
			</list>
		</widget>
	</widget>
	<!-- titled box -->

</panel>