<panel>
	<layout class="fit_children_attachment" alignment="vertical" offset="0"/>
	<layout class="stick_to_sides_attachment" alignment="horizontal,top" inset="0" apply_to_children="true"/>

	<container class="standard_popup_box">
		<layout class="fit_children_attachment" alignment="vertical" offset="0"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal,top" inset="0, 12, 0, 12" apply_to_children="true"/>
		
		<container class="scrolling_box" id="scbx" auto_size="vertical" amxh="400">

			<container>
				<layout class="arrange_vertical_attachment" alignment="top" offset="0"/>
				<layout class="fit_children_attachment" alignment="vertical,fill" offset="0"/>
				<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

				<widget class="text" alignment="left,centre_y" font="title" height="30">
					<translation id="text" translation_id="386667" type="use" value="Bids[COMMENT: FR 10312; player transfer offer panel; bids made popup title]"/>
				</widget>

				<!-- Transfer Offers -->
				<widget class="table" id="TraT" layout="-7, -5, -5, -5" mode="fill_rows" auto_size="vertical" fixed_size_rows="false" auto_size_rows="true">
					<list id="default_sort_column">
						<integer value="3"/>
						<integer value="0"/>
					</list>

					<!-- Title of box -->
					<list id="headings">
						<record column_span="3" alignment="left,centre_y" id="rcof">
							<translation id="text" translation_id="306802" type="use" value="Recent Offers"/>
						</record>
						<record alignment="left,centre_y" id="ofdt">
							<translation id="text" translation_id="329373" type="use" value="Offer Date[COMMENT: player_transfer_interest_panel; table header text indicating the date a transfer offer was made for a player]"/>
						</record>
					</list>

					<!-- table isn't sortable -->
					<list id="column_table_properties">
						<record index="1" sort_disabled="true"/>
					</list>
				</widget>
			</container>
		</container>
	</container>

</panel>