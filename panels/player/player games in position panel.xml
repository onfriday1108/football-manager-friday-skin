<panel>
	<translation id="title" translation_id="257322" type="use" value="Games Played In Position" />
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

	<widget class="label" id="nogp" alignment="left,top" hidden="true" />

	<!-- games played in position table -->
	<widget class="table" id="gpip" mode="fill_rows, stripe_rows" layout="-3, -3, -3, -3, -3" auto_size="vertical" auto_size_rows="true" fixed_size_rows="false">
		<list id="default_sort_column">
			<integer value="club" />
			<integer value="posi" />
		</list>

		<flags id="row_appearance" value="tables/custom/fmc/default/row" />
		<flags id="row_over_appearance" value="tables/custom/fmc/over/row" />
		<flags id="stripe_appearance" value="tables/custom/fmc/stripe/row" />
		<flags id="selected_appearance" value="tables/custom/fmc/selected/row" />

		<list id="headings">
			<record alignment="left,centre_y">
				<translation id="text" translation_id="242883" type="use" value="Pos" />
			</record>
			<record alignment="centre">
				<translation id="hint" translation_id="257323" type="use" value="Games played in this position for his club" />
				<translation id="text" translation_id="227737" type="use" value="Club" />
			</record>
			<record alignment="centre">
				<translation id="hint" translation_id="342768" type="use" value="Average rating in matches for his club team[COMMENT: Player's average rating across games played for his club]" />
				<translation id="text" translation_id="227852" type="use" value="Av Rat[comment - Average rating]" />
			</record>
			<record alignment="centre">
				<translation id="hint" translation_id="257325" type="use" value="Games played in this position for his national team" />
				<translation id="text" translation_id="257324" type="use" value="Int." />
			</record>
			<record alignment="centre">
				<translation id="hint" translation_id="342769" type="use" value="Average rating in matches for his national team[COMMENT: Player's average rating across games played for his nation]" />
				<translation id="text" translation_id="227852" type="use" value="Av Rat[comment - Average rating]" />
			</record>
		</list>

		<list id="column_widget_properties">
			<record index="0" alignment="left,centre_y" spec="text" />
			<record index="1" alignment="centre, centre_y" />
			<record index="2" alignment="centre, centre_y" />
			<record index="3" alignment="centre, centre_y" />
			<record index="4" alignment="centre, centre_y" />
		</list>

		<list id="column_table_properties">
			<record indx="0" left="4" id="posi" />
			<record indx="1" id="club" sort_ascending="false" />
			<record indx="2" id="cave" sort_ascending="false" />
			<record indx="3" id="nati" sort_ascending="false" />
			<record indx="4" id="nave" sort_ascending="false" />
		</list>
	</widget>
</panel>