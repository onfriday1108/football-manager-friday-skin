		<widget class="picture" id="wbrp" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" />

		<!--5th row-->
		<widget class="picture" id="dlp " image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" />

		<widget class="picture" id="dcp " image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" />

		<widget class="picture" id="drp " image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" />

		<!--6th row-->
		<widget class="spacer" />

		<widget class="picture" id="gkp " image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" />

		<widget class="spacer" />


	</container>


