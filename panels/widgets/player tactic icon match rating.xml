<panel>
  <layout class="arrange_vertical_attachment" alignment="bottom,extend" offset="0" gap="0"/>
  <layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

  <container>
    <layout class="stick_to_sides_attachment" alignment="horizontal" inset="10" apply_to_children="true"/>
    <layout class="stick_to_sides_attachment" alignment="vertical" inset="1" apply_to_children="true"/>

    <widget class="picture" id="bsic" scale_picture="true" file="pitch/icons/kit/medium/kit" image_alignment="centre">
    </widget>

    <widget class="picture" id="bssl" scale_picture="true" file="pitch/icons/person_highlight">
    </widget>

    <widget class="text" id="bsnm" alignment="centre">
    </widget>
  </container>

  <container class="main_box" height="30" appearance="boxes/custom/pitch selection/paper_selected" red_replacement="blue grey 800">
    <layout class="arrange_vertical_attachment" alignment="fill" offset="0" gap="0"/>
    <layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

    <widget class="text" id="name" size="xxsmall" alignment="centre" multiline="false" height="18" >
      <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" />
    </widget>

    <widget class="dashed_number_label" height="16" id="avra" alignment="centre" size="xxsmall" format="[%fraction#1-2.1]" colour="green a200" style="semi_bold"/>
  </container>
</panel>
