<panel>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

	<!--the main background-->
	<widget class="picture" id="bSHR" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
	</widget>

	<container>
		<layout class="arrange_vertical_attachment" alignment="top,extend" offset="0" gap="11"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

		<!--Name of the player: This is hidden on the player stats panel-->
		<!-- the font size reduces one size when the name is bigger than 16 characters -->
		<widget class="label" id="bNAM" size="9" alignment="top,can_scale" font="fonts/kit name">
			<layout class="stick_to_sides_attachment" alignment="top" inset="3"/>
			<layout class="stick_to_sides_attachment" alignment="horizontal" inset="2"/>
		</widget>
		<!-- player number -large -->
		<widget class="picture" id="bNUM" image_alignment="bottom" scale_picture="true" keep_aspect_ratio="true">
			<layout class="stick_to_sides_attachment" alignment="bottom" inset="12"/>
		</widget>


	</container>


	<!--overlay effect-->
	<widget class="picture" id="bOVR" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
	</widget>

	<container id="numc">

		<layout class="fit_children_attachment" alignment="horizontal" offset="0" gap="0"/>
		<layout class="arrange_vertical_attachment" alignment="bottom" offset="0" gap="0"/>
		<layout class="stick_to_sides_attachment" alignment="left" inset="0" apply_to_children="true"/>

		<container class="main_box" appearance="boxes/custom/darken/no margin/paper">
			<layout class="fit_children_attachment" alignment="vertical" offset="0" gap="0"/>
			<layout class="fit_children_attachment" alignment="horizontal" offset="4" gap="0"/>
			<layout class="arrange_vertical_attachment" alignment="bottom" offset="2" gap="0"/>
			<layout class="stick_to_sides_attachment" alignment="left" inset="4" apply_to_children="true"/>

			<widget class="label" id="numb" auto_size="all" colour="white">

			</widget>
		</container>



	</container>




</panel>
