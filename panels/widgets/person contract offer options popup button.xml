<panel>
	<attachment_group class="horizontal_arrange_vertical_autosize" horizontal_alignment="left" horizontal_offset="0" horizontal_gap="4" vertical_inset="0"/>

	<boolean id="should_force_refresh" value="true"/>

		<container>
			<layout class="fit_children_attachment" alignment="vertical" offset="0"/>
			<layout class="arrange_horizontal_attachment" alignment="right" offset="0">
				<global id="gap" name="ui.split_button_row_gap"/>
			</layout>
			<layout class="fit_children_attachment" alignment="horizontal, fill" offset="0">
				<global id="gap" name="ui.split_button_row_gap"/>
			</layout>
			<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

			<widget class="button" id="Pact" auto_size="all" appearance="buttons/standard/split/left/button"/>
			<widget class="popup_button" id="Ppup" select_event="SelA" fixed="true" width="45" height="30" appearance="buttons/standard/split/right/button"/>

		</container>
		
		<widget class="picture" id="Aicn" height="16" width="16" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true"/>
		<widget class="text" id="Atxt" auto_size="all"/>
</panel>