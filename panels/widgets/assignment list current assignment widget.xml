<panel>
  <flags id="child_for_sort" value="name"/>
  
  <layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0,10"/>

  <widget class="widget_popup_button" widget_type="assignment_details_popup_panel">
    <record id="modal_popup_properties" attempt_to_reposition="true" />

    <record id="object_property">
      <list id="get_properties">
        <record>
          <integer id="get_property" value="WdgP" />
          <integer id="set_property" value="WdgP" />
        </record>
        <record>
          <integer id="get_property" value="aprn" />
          <integer id="set_property" value="aprn" />
        </record>
        <record>
          <integer id="get_property" value="colr" />
          <integer id="set_property" value="colr" />
        </record>
        <record>
          <integer id="get_property" value="HBut" />
          <integer id="set_property" value="hidn" />
        </record>
      </list>
    </record>
  </widget>

  <container>
    
    <attachment_group class="horizontal_arrange" horizontal_alignment="left" horizontal_offset="4" horizontal_gap="0" vertical_inset="0"/>

    <container width="220">
      <attachment_group class="vertical_arrange" vertical_alignment="middle" vertical_offset="4" vertical_gap="0" horizontal_inset="8"/>

      <widget class="text" id="name" alignment="left,centre_y" auto_size="all" wants_mouse_events="false" colour="text">
        <record id="object_property">
          <list id="get_properties">
            <record>
              <integer id="get_property" value="text" />
              <integer id="set_property" value="text" />
            </record>
          </list>
        </record>
      </widget>

    </container>

    <container width="90">
      <attachment_group class="vertical_arrange" vertical_alignment="middle" vertical_offset="4" vertical_gap="0" horizontal_inset="8"/>

      <widget class="horizontal_percentage_bar" height="10" label_width="0" wants_mouse_events="false">
        <record id="object_property">
          <list id="get_properties">
            <record>
              <integer id="get_property" value="barP" />
              <integer id="set_property" value="valu" />
            </record>
            <record>
              <integer id="get_property" value="HBar" />
              <integer id="set_property" value="hidn" />
            </record>
          </list>
        </record>
      </widget>

      <widget class="text" alignment="left,centre_y" auto_size="vertical" wants_mouse_events="false" colour="text">
        <record id="object_property">
          <list id="get_properties">
            <record>
              <integer id="get_property" value="atxt" />
              <integer id="set_property" value="text" />
            </record>
          </list>
        </record>
      </widget>
      
    </container>

  </container>
</panel>