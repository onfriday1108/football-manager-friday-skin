<panel>
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>
  
  <boolean id="show_background" value="true"/>
  <boolean id="show_label_instead_of_portrait" value="false"/>
  <boolean id="use_object_colours" value="false"/>

  <!-- background -->
  <widget class="picture" id="obbk" file="boxes/custom/feed/profiles/website/paper" scale_picture="true" keep_aspect_ratio="true">
    <layout class="stick_to_sides_attachment" alignment="all" inset="0"/>
  </widget>
  
  <!-- label -->
  <container>
  	<layout class="stick_to_sides_attachment" alignment="all" inset="2" apply_to_children="true"/>
  <widget class="client_object_label" id="oblw" colour="white" alignment="centre,auto_fit,can_scale" multiline="true" style="semi_bold">
  </widget>
  </container>


</panel>
