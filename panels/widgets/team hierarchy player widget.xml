<panel>
	<boolean id="should_force_refresh" value="true"/>
	<widget class="button" id="hglP" appearance="">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" />
	</widget>

	<container>
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" />
		<!--highlight box-->
		<container class="main_contrast_box" id="hghl" hidden="true" red_replacement="attention" >
			<layout class="stick_to_sides_attachment" alignment="all" inset="1" />
		</container>
		<!--main box-->
		<container>
			<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" />

			<container class="main_box" id="plbx" appearance="boxes/custom/dynamics/player widget/paper" >
				<layout class="arrange_vertical_attachment" layout="5,-1" offset="5" gap="0" />
				<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />
				<layout class="stick_to_sides_attachment" alignment="all" inset="0" offset="2" />

				<widget class="spacer" />

				<container>
					<layout class="arrange_vertical_attachment" alignment="bottom,extend"  offset="0" gap="6" />
					<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

					<container class="horizontal_adaptive_container" inset="0">
						<!-- Profile picture -->
						<widget class="squad_number_label"  spec="text" size="large" style="bold" colour="secondary" alignment="centre" wants_mouse_events="false" minimum_width="3" default_width="-1"  priority="1">
							<record id="object_property">
								<list id="get_properties">
									<record get_property="Psnu" set_property="valu" />
								</list>
							</record>
						</widget>
						<widget class="picture" id="prop" scale_picture="true" keep_aspect_ratio="true" image_alignment="centre_x" default_width="-1" minimum_width="30" priority="3">
							<record id="object_property">
								<list id="get_properties">
									<!--Facegen data request-->
									<record get_property="fcgn" />
									<!--Fake name request-->
									<record get_property="Pfke" />
									<record get_property="prpc" set_property="valu" />
								</list>
							</record>
						</widget>
					</container>

					<container class="inner_box_no_margin" height="16">
						<layout class="stick_to_sides_attachment" alignment="all" inset="0,0" apply_to_children="true" />
						<widget class="text" id="pLab" spec="text" size="xsmall" font="bold"  colour="secondary" disabled_colour="secondary" alignment="centre,can_scale"/>
					</container>

					<container class="inner_box_no_margin" height="22">
						<layout class="stick_to_sides_attachment" alignment="all" inset="0,2,4,2" apply_to_children="true" />
						<widget class="text" id="ppLb" spec="text" size="xsmall"  colour="secondary" disabled_colour="faded text" alignment="centre" >
							<!--<translation id="hint" type="new"/>-->
						</widget>
					</container>
				</container>

			</container>

			<!--social group indicator-->
			<container class="main_box" id="ifsC"  hidden="true"  appearance="boxes/custom/dynamics/player widget group/paper" height="14"  wants_mouse_events="false">
				<layout class="stick_to_sides_attachment" alignment="all" inset="1,0" apply_to_children="true" />
				<layout class="stick_to_sides_attachment" alignment="top" inset="0" />
				<widget class="icon_button" id="sgst" alignment="centre" appearance="" icon="icons/custom/dynamics/group small" icon_alignment="centre"  style="semi_bold" font="title" scale_picture="true" icon_colour="black" colour="black" size="5.5" />

			</container>

			<!--Manager support indicator-->
			<container class="main_box" id="mgSc"  hidden="true"  appearance="boxes/custom/dynamics/player widget group/paper" height="14"  wants_mouse_events="false">
				<layout class="arrange_horizontal_attachment"  alignment="middle" offset="0" gap="0" />
				<layout class="stick_to_sides_attachment" alignment="all" inset="5,0" apply_to_children="true" />
				<layout class="stick_to_sides_attachment" alignment="top" inset="0" />
				<widget class="text" id="mgSt" alignment="centre" multiline="false" font="title" colour="black" size="7" wants_mouse_events="false" />
			</container>
		</container>

	</container>

	<container width="16" height="16">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
		<layout class="stick_to_sides_attachment" alignment="left,top" inset="0" />
		<!--icon indicating change in Hierarchy status-->
		<!--change up-->
		<widget class="picture" id="indu"  image_alignment="right,centre_y" scale_picture="false" keep_aspect_ratio="true" wants_mouse_events="false" file="icons/16px/change up"/>
		<!--change down-->
		<widget class="picture" id="indd"  image_alignment="right,centre_y" scale_picture="false" keep_aspect_ratio="true" wants_mouse_events="false" file="icons/16px/change down"/>
	</container>
	<!--icon indicating Player is captain-->
	<container width="15" height="15">
		<layout class="stick_to_sides_attachment" alignment="right,top" inset="0" />
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
		<widget class="picture" id="cptP" image_alignment="right,centre_y" file="icons/custom/promises/captain" red_replacement="yellow" blue_replacement="black" scale_picture="true" keep_aspect_ratio="true" wants_mouse_events="false">
			<translation id="hint" translation_id="300013" type="use" value="Captain" />
		</widget>

		<widget class="picture" id="vcpP" image_alignment="right,centre_y" file="icons/custom/promises/vice captain" red_replacement="white" blue_replacement="black" scale_picture="true" keep_aspect_ratio="true" wants_mouse_events="false">
			<translation id="hint" translation_id="300014" type="use" value="Vice Captain" />
		</widget>
	</container>
</panel>