					<record>
						<translation id="text" translation_id="230113" type="use" value="Duration" />
					</record>
					<record>
						<translation id="text" translation_id="383814" type="use" value="Total Value[COMMENT: FR 10982, content for Finances Screen]" />
					</record>

				</list>

				<list id="column_table_properties">
					<record indx="0" id="icon" />
					<record indx="1" id="type" />
					<record indx="2" id="valu" />
					<record indx="3" id="unti" />
					<record indx="4" id="dura" />
					<record indx="5" id="tota" />
				</list>

				<!-- default sort -->
				<list id="default_sort_column">
					<integer value="valu" />
				</list>

			</widget>
		</container>
	</container>
</panel>