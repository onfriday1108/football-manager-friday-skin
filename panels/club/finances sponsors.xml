				</record>
			</container>
		</container>

		<container class="main_box" >
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
			<widget class="table" id="txtG" layout="35,-1, 120,120,120,120" row_height="28" row_spacing="0" mode="fill_rows,select_rows" msov="itSL" msex="itUL">

				<!-- table headings -->
				<list id="headings">
					<record indx="0" column_span="2">
						<translation id="text" translation_id="229400" type="use" value="Type" />
					</record>
					<record>
						<translation id="text" translation_id="383825" type="use" value="Value (Per Season)[COMMENT: FR 10982, content for Finances Screen]" />
