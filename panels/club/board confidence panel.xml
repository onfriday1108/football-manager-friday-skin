<panel draw_horizontal_dividers="true">
	<set_var name="highlight_criticism_table">
		<widget class="table" mode="fill_rows" layout="20,-1" auto_size_rows="true" fixed_size_rows="false" auto_size="vertical" row_spacing="6">
			<list id="column_widget_properties">
				<record indx="0" alignment="left, centre_y" keep_aspect_ratio="true" scale_picture="true" image_alignment="centre" height="20" />
				<record indx="1" alignment="left,centre_y" multiline="true" />
			</list>
		</widget>
	</set_var>
	
  <attachment_group class="vertical_arrange" vertical_alignment="top,extend" vertical_offset="0" horizontal_inset="0" vertical_gap="20" />

  <container class="main_box">
    <attachment_group class="vertical_arrange_autosize" vertical_gap="10" />

      <translation id="title" translation_id="491848" type="use" value="Confidence Summary[COMMENT: AREA: Confidence; SUB-AREA: Board Confidence; FR-BN: ?; TONE: Formal; CHARLIMIT: If Applicable, otherwise None; REF-ID: n/a; NOTE: title for summary overview of confidence in manager]" />


    <widget class="performance_grade_box" id="smgb" auto_size="vertical">
      
    </widget>

    <container draw_vertical_dividers="true">
      <attachment_group class="horizontal_arrange_vertical_autosize" horizontal_layout="-1,-1" horizontal_gap="20" />

      <container>
        <attachment_group class="vertical_arrange_autosize" />

        <widget class="text" font="title" colour="performance highlight positive" auto_size="vertical">
          <translation id="text" translation_id="491846" type="use" value="Notable Highlights[COMMENT: AREA: Confidence; SUB-AREA: Board Confidence; FR-BN: ?; TONE: Formal; CHARLIMIT: If Applicable, otherwise None; REF-ID: n/a; NOTE: title for best aspects of recent managerial performance]" />
        </widget>

		<var id="hitb" name="highlight_criticism_table" />

        <widget class="text" id="mhtx" auto_size="vertical" colour="faded text" />

      </container>

      <container>
        <attachment_group class="vertical_arrange_autosize" />

        <widget class="text" font="title" colour="performance highlight negative" auto_size="vertical">
          <translation id="text" translation_id="491847" type="use" value="Notable Criticisms[COMMENT: AREA: Confidence; SUB-AREA: Board Confidence; FR-BN: ?; TONE: Formal; CHARLIMIT: If Applicable, otherwise None; REF-ID: n/a; NOTE: title for worst aspects of recent managerial performance]" />
        </widget>

		<var id="crtb" name="highlight_criticism_table" />
       
        <widget class="text" id="mctx" auto_size="vertical" colour="faded text" />

      </container>

    </container>

  </container>

 

  <container class="main_box">
    <translation id="title" translation_id="383267" type="use" value="Breakdown[COMMENT: Finances panel]" />

    <layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

    <widget class="table" id="ctab" mode="fill_rows" fixed_size_rows="false" auto_size_rows="true" layout="200,-1,100" column_spacing="8" row_spacing="8">
      <!--headings-->

      <list id="column_table_properties">
        <record index="0" id="itmc" alignment="left,centre_y" />
        <record index="1" id="grdc" alignment="centre" />        
        <record index="2" id="typc" alignment="right,centre_y" />
      </list>

      <list id="column_widget_properties">
        <record index="0" alignment="left,centre_y" appearance="buttons/link/title/button" colour="text" red_replacement="text" />
        <record index="1" alignment="left,centre_y" />        
        <record index="2" alignment="right,centre_y" appearance="" font="title" />

      </list>

    </widget>
  </container>



</panel>