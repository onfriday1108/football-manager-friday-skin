<panel draw_horizontal_dividers="true">
  <attachment_group class="vertical_arrange" vertical_alignment="top,extend">
      <global id="vertical_gap" name="ui.main_box_gap" />
  </attachment_group>

  <container id="cftb" draw_vertical_dividers="true">
    <attachment_group class="horizontal_arrange_vertical_autosize" horizontal_layout="-1,-1" horizontal_gap="20" />

    <container class="main_box">
      <attachment_group class="vertical_arrange_autosize" vertical_alignment="top" vertical_gap="6" />

      <container>
        <attachment_group class="horizontal_arrange_vertical_autosize_centre" horizontal_alignment="right,extend" />

        <widget class="text" auto_size="vertical" font="title" colour="performance board tag">
          <translation id="text" translation_id="491852" type="use" value="Transfer Activity Board Summary[COMMENT: AREA: Confidence; SUB-AREA: Board Confidence; FR-BN: ?; TONE: Formal; CHARLIMIT: If Applicable, otherwise None; REF-ID: n/a; NOTE: title for summary overview of the board's confidence in recent transfers]" />
        </widget>

        <widget class="icon_button" icon="icons/26px/board" auto_size="all" icon_colour="performance board tag" appearance="" colour="performance board tag" font="title" navigation_focus_target="false">
          <translation id="text" translation_id="337816" type="use" value="Board[COMMENT: club screen - title for a board related activities submenu]" />
        </widget>
        
      </container>

      <widget class="performance_grade_box" id="bpgb" auto_size="vertical" />

    </container>

    <container class="main_box">
      <attachment_group class="vertical_arrange_autosize" vertical_alignment="top" vertical_gap="6" />

      <container>
        <attachment_group class="horizontal_arrange_vertical_autosize_centre" horizontal_alignment="left,extend" />

        <widget class="icon_button" icon="icons/26px/board" auto_size="all" icon_colour="performance fans tag" appearance="" colour="performance fans tag" font="title" navigation_focus_target="false">
          <translation id="text" translation_id="491853" type="use" value="Fans[COMMENT: AREA: Confidence; SUB-AREA: Board Confidence; FR-BN: ?; TONE: Formal; CHARLIMIT: If Applicable, otherwise None; REF-ID: n/a; NOTE: section title for confidence opinions held by the Fans rather than the Board]" />
        </widget>
        
        <widget class="text" auto_size="vertical" font="title" colour="performance fans tag" alignment="right,centre_y">
          <translation id="text" translation_id="491854" type="use" value="Transfer Activity Fans' Summary[COMMENT: AREA: Confidence; SUB-AREA: Board Confidence; FR-BN: ?; TONE: Formal; CHARLIMIT: If Applicable, otherwise None; REF-ID: n/a; NOTE: title for summary overview of the fans' confidence in recent transfers]" />
        </widget>

      </container>

      <widget class="performance_grade_box" id="fpgb" auto_size="vertical" file="widgets/performance grade box right to left" />
    </container>

  </container>

  <container class="scrolling_box">
    <container class="fan_transfer_reaction_panel" id="ftrp" auto_size="vertical" />
  </container>

  <!--<container class="vertical_adaptive_container" offset="0" gap="1" inset="0" mode="distribute_equally">

    <container class="fan_trade_reaction_panel" id="ftra"/>

    <container class="fan_transfer_reaction_panel" id="ftrp" />

  </container>-->
</panel>