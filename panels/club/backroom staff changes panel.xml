<panel>
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

	<container>
		<layout class="arrange_vertical_attachment" layout="-1,45" offset="0"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0"/>

		<container class="vertical_adaptive_container" mode="distribute_equally" inset="0" offset="0">


			<container class="main_box" id="fclc">

				<attachment_group class="vertical_arrange" vertical_alignment="top,extend" horizontal_alignment="horizontal" />

				<container height="27">
					<layout class="arrange_horizontal_attachment" alignment="left,extend" />
					<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" />

					<widget class="object_portrait_picture" id="fclp" width="20" height="20" scale_picture="true" keep_aspect_ratio="true" image_alignment="centre" />

					<widget class="text" id="fcln" auto_size="horizontal" />

					<widget class="text" id="fcle" colour="faded text" />
				</container>

				<widget class="table" id="fcot" layout="25,200,20,200,20,200,120,-1,100">
					<list id="headings">
						<record index="0" alignment="left,centre_y" auto_hide_priority="1">
						</record>
						<record index="1" alignment="left,centre_y" auto_hide_priority="1">
							<translation id="text" translation_id="229689" type="use" value="Name" />
						</record>
						<record index="2" alignment="left,centre_y" column_span="2" auto_hide_priority="1">
							<translation id="text" translation_id="227964" type="use" value="Job" />
						</record>
						<record index="4" alignment="left,centre_y" column_span="2" auto_hide_priority="200">
							<translation id="text" translation_id="383632" type="use" value="Secondary Job[COMMENT: FR9178, secondary job the person will do]" />
						</record>
						<record index="6" alignment="left,centre_y" auto_hide_priority="1">
							<translation id="text" translation_id="247223" type="use" value="Current Wage[COMMENT: home_page; salary panel text]" />
						</record>
						<record index="7" alignment="left,centre_y" auto_hide_priority="1" minimum_width="200">
							<translation id="text" translation_id="232957" type="use" value="Reason" />
						</record>
						<record index="8" alignment="right,centre_y" auto_hide_priority="1">
							<translation id="text" translation_id="395168" type="use" value="Compensation[COMMENT: backroom staff changes panel column header showing how much it'll cost to make the staff change for this person]" />
						</record>
					</list>

					<list id="column_table_properties">
						<record index="0" sort_disabled="true" auto_hide_priority="1"/>
						<record index="1" sort_disabled="true" auto_hide_priority="1"/>
						<record index="2" sort_disabled="true" auto_hide_priority="1"/>
						<record index="3" sort_disabled="true" auto_hide_priority="1"/>
						<record index="4" sort_disabled="true" auto_hide_priority="200"/>
						<record index="5" sort_disabled="true" auto_hide_priority="100"/>
						<record index="6" sort_disabled="true" auto_hide_priority="1"/>
						<record index="7" sort_disabled="true" auto_hide_priority="1" minimum_width="200"/>
						<record index="8" sort_disabled="true" auto_hide_priority="1"/>
					</list>
				</widget>

			</container>

			<container class="main_box">
				<attachment_group class="vertical_arrange" vertical_alignment="top,extend" horizontal_alignment="horizontal"  />

				<container height="27">
					<layout class="arrange_horizontal_attachment" alignment="left,extend" />
					<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" />

					<widget class="object_portrait_picture" id="tclp" width="20" height="20" scale_picture="true" keep_aspect_ratio="true" image_alignment="centre">
						<record id="object_property">
							<integer id="get_property" value="objt" />
							<integer id="set_property" value="objt" />
						</record>
					</widget>

					<widget class="text" id="tcln" auto_size="horizontal">

					</widget>

					<widget class="text" id="tcle" colour="faded text">

					</widget>

				</container>

				<widget class="table" id="tcot" layout="25,200,200,200,120,-1">
					<list id="headings">
						<record index="0" alignment="left,centre_y">
						</record>
						<record index="1" alignment="left,centre_y">
							<translation id="text" translation_id="229689" type="use" value="Name" />
						</record>
						<record index="2" alignment="left,centre_y">
							<translation id="text" translation_id="227964" type="use" value="Job" />
						</record>
						<record index="3" alignment="left,centre_y">
							<translation id="text" translation_id="383632" type="use" value="Secondary Job[COMMENT: FR9178, secondary job the person will do]" />
						</record>
						<record index="4" alignment="left,centre_y">
							<translation id="text" translation_id="247223" type="use" value="Current Wage[COMMENT: home_page; salary panel text]" />
						</record>
						<record index="5" alignment="right,centre_y">
							<translation id="text" translation_id="395168" type="use" value="Compensation[COMMENT: backroom staff changes panel column header showing how much it'll cost to make the staff change for this person]" />
						</record>
					</list>

					<list id="column_table_properties">
						<record index="0" sort_disabled="true" />
						<record index="1" sort_disabled="true" />
						<record index="2" sort_disabled="true" />
						<record index="3" sort_disabled="true" />
						<record index="4" sort_disabled="true" />
						<record index="5" sort_disabled="true" />
					</list>
				</widget>

			</container>
		</container>



		<container class="bordered_box_no_margin">
			<layout class="arrange_horizontal_attachment" alignment="right,extend" offset="0" gap="6" />
			<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="4" />

			<container>
				<layout class="arrange_horizontal_attachment" alignment="right" offset="0" />
				<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0" />

				<widget class="label" auto_size="horizontal" colour="faded text">
					<translation id="text" translation_id="395167" type="use" value="Compensation Budget:[COMMENT: backroom staff changes panel column header showing the available budget for compensation needed to make changes]" />
				</widget>

				<widget class="label" id="maxc" auto_size="horizontal" />

				<container width="4" />

				<widget class="label" auto_size="horizontal" colour="faded text">
					<translation id="text" translation_id="395175" type="use" value="Current Compensation:[COMMENT: backroom staff changes panel column header showing compensation paid out thus far]" />
				</widget>

				<widget class="label" id="cuco" auto_size="horizontal" />
			</container>

			<container>
				<layout class="arrange_horizontal_attachment" alignment="right" offset="4" />
				<layout class="fit_children_attachment" alignment="horizontal,fill" offset="4" />
				<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0" />

				<widget class="button" id="rese" auto_size="all" click_event="rest">
					<translation id="text" translation_id="230013" type="use" value="Reset" />
				</widget>

				<widget class="primary_icon_button" id="conf" click_event="conf" icon="icons/16px/tick">
					<translation id="text" translation_id="229918" type="use" value="Confirm" />
				</widget>

			</container>
		</container>


	</container>


</panel>