	<layout class="arrange_vertical_attachment" alignment="top, extend" offset="0" gap="0"/>
	<layout class="stick_to_sides_attachment" alignment="horizontal" inset="10" apply_to_children="true"/>
	<layout class="stick_to_sides_attachment" alignment="vertical" inset="8"/>

	<container height="25">
		<layout class="arrange_horizontal_attachment" alignment="right,extend" offset="0" gap="0"/>
		<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

		<widget class="text" id="reas" size="small" alignment="left,centre_y" multiline="false" colour="faded text"/>
		<widget class="text" id="rtbl" size="small" alignment="right,centre_y" multiline="false" auto_size="horizontal" colour="faded text"/>
	</container>

	<widget class="person_button" id="plwc" size="medium" alignment="centre" multiline="true" auto_size="vertical" style="bold"/>
	<widget class="text" id="rccb" size="medium" alignment="centre" multiline="true" auto_size="vertical"/>

	<widget class="table" id="tblp" layout="-1" mode="fill_rows, stripe_rows" fixed_size_rows="true" row_height="25">
		<list id="headings">
			<record index="0" alignment="left,centre_y">
				<translation id="text" translation_id="336580" type="use" value="Players[COMMENT:club/nation section for all scouting pages]"/>
				<translation id="hint" translation_id="336580" type="use" value="Players[COMMENT:club/nation section for all scouting pages]"/>
			</record>
		</list>

		<list id="column_widget_properties">
			<record index="0" sort_disabled="true" alignment="left,centre_y" multiline="false"/>
		</list>

		<list id="column_table_properties">
			<record index="0" left="4" sort_disabled="true"/>
		</list>
	</widget>
	
</panel>
