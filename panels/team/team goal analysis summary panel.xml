<panel>
    <layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

    <container class="main_box" force_title_borders="true">
      <layout class="arrange_vertical_attachment" alignment="fill"/>
      <layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0"/>

      <string id="skin_style" value="title link" />

      <widget class="link_button" section="glan" auto_size="all" alignment="left,centre_y" embed_in_frame="true">
        <translation id="text" translation_id="317304" type="use" value="Goal Analysis[COMMENT: team report goal analysis panel; panel title for goal analysis section]" />
        <layout class="stick_to_sides_attachment" alignment="left" embed_in_frame="true" inset="10"/>
        <layout class="stick_to_sides_attachment" alignment="top" embed_in_frame="true" inset="8"/>
      </widget>

      <widget class="label" id="ghtx" auto_size="horizontal" colour="faded text" size="small" alignment="left,centre_y" embed_in_frame="true">
        <layout class="stick_to_sides_attachment" alignment="right" embed_in_frame="true" inset="10"/>
        <layout class="stick_to_sides_attachment" alignment="top" embed_in_frame="true" inset="2"/>
      </widget>

      <container>
        <layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="0" />
        <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />
        
        <widget class="label" auto_size="vertical" font="label">
          <translation id="text" translation_id="330715" type="use" value="Total[COMMENT:column title for the uefa coefficient total for a team this season]" />
        </widget>

        <widget class="text" auto_size="vertical" id="goal" >
        </widget>
      </container>

      <container>
        <layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="0" />
        <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

        <widget class="label" auto_size="vertical" font="label">
          <translation id="text" translation_id="420709" type="use" value="Location[COMMENT: search filter dialog; location panel heading]" />
        </widget>

        <widget class="text" auto_size="vertical" id="gloc" multiline="false">
        </widget>
      </container>

      <container>
        <layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="0" />
        <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

        <widget class="label" auto_size="vertical" font="label">
          <translation id="text" translation_id="317307" type="use" value="Goal Type[COMMENT:team report, type of goal]" />
        </widget>

        <widget class="text" auto_size="vertical" id="glty">
        </widget>
      </container>

      <container>
        <layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="0" />
        <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

        <widget class="label" auto_size="vertical" font="label">
          <translation id="text" translation_id="317310" type="use" value="Assist Type[COMMENT:team report, type of assist]" />
        </widget>

        <widget class="text" auto_size="vertical" id="asst">
        </widget>
      </container>

      <container>
        <layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="0" />
        <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

        <widget class="label" auto_size="vertical" font="label">
          <translation id="text" translation_id="317311" type="use" value="Assist Locations[COMMENT: team report goal analysis panel; panel title indicating where on the pitch assists came from]" />
        </widget>

        <widget class="text" auto_size="vertical" id="aloc">
        </widget>
      </container>

      <container>
        <layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="0" />
        <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

        <widget class="label" auto_size="vertical" font="label">
          <translation id="text" translation_id="433862" type="use" value="Time[COMMENT: time an event happened during a match]" />
        </widget>

        <widget class="text" auto_size="vertical" id="gtim">
        </widget>
      </container>
    </container>
</panel>
