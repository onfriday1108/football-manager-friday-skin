<panel navigation_container="true" >
	<container class="main_box">
		<layout class="arrange_vertical_attachment" layout="-3,1,-2" />
		<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />
		<layout class="stick_to_sides_attachment" alignment="all" inset="0"  />

		<container>
			<layout class="arrange_vertical_attachment" layout="-4, -11" offset="0" />
			<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

			<container>
				<layout class="arrange_horizontal_attachment" layout="-1,100,-1" offset="0" />
				<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />

				<container>
					<layout class="arrange_vertical_attachment" alignment="bottom,extend" offset="0" />
					<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />
					<widget class="object_portrait_picture" id="bghm" scale_picture="true" keep_aspect_ratio="true" image_alignment="centre" />
					<widget class="team_button" id="htna" alignment="centre" auto_size="vertical" style="semi_bold" size="10" icon_enabled="false"/>
				</container>

				<widget class="label" id="scor" size="25" style="bold" alignment="centre" font="fonts/letterpressed" />

				<container>
					<layout class="arrange_vertical_attachment" alignment="bottom,extend" offset="0" />
					<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />
					<widget class="object_portrait_picture" id="bgaw" scale_picture="true" keep_aspect_ratio="true" image_alignment="centre" />
					<widget class="team_button" id="atna" alignment="centre" auto_size="vertical" style="semi_bold" size="10" icon_enabled="false"/>
				</container>

			</container>

			<container>
				<layout class="arrange_vertical_attachment" alignment="bottom,extend" offset="0" gap="0" />
				<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

				<widget class="table" id="mstl" layout="-1, -1, -4, -1, -1" mode="printable" auto_size_rows="true" fixed_size_rows="false" auto_size="vertical" row_spacing="0">

					<list id="column_widget_properties">
						<record indx="0" alignment="left,centre_y" />
						<record indx="1" alignment="centre" />
						<record indx="2" alignment="centre" />
						<record indx="3" alignment="centre" />
					</list>

					<list id="column_table_properties">
						<record indx="0" sort_disabled="true" />
						<record indx="1" sort_disabled="true" />
						<record indx="2" sort_disabled="true" />
						<record indx="3" sort_disabled="true" />
					</list>

					<record id="default_properties" auto_size="vertical" size="9" />

					<widget class="label" row="0" col="2">
						<translation id="text" translation_id="247381" type="use" value="Shots" />
					</widget>
					<widget class="label" row="2" col="2">
						<translation id="text" translation_id="247382" type="use" value="On Target" />
					</widget>
					<widget class="label" row="4" col="2">
						<translation id="text" translation_id="232851" type="use" value="Possession" />
					</widget>
					<widget class="label" row="6" col="2">
						<translation id="text" translation_id="247385" type="use" value="Fouls" />
					</widget>
					<widget class="label" row="8" col="2">
						<translation id="text" translation_id="227896" type="use" value="Corners" />
					</widget>

				</widget>

				<container>
					<layout class="fit_children_attachment" alignment="vertical" offset="0" />
					<layout class="arrange_horizontal_attachment" alignment="right" offset="0">
           <global id="gap" name="ui.button_row_gap"/>
          </layout>
					<layout class="stick_to_sides_attachment" alignment="bottom" inset="0" apply_to_children="true" />

					<widget class="link_appearance_button" id="tcbl">
						<translation id="text" translation_id="296334" type="use" value="Analysis[COMMENT: match screen; analysis panel]" />
					</widget>
					<widget class="link_appearance_button" id="ttfb">
						<translation id="text" translation_id="320525" type="use" value="Team Talk Feedback[COMMENT: link to assistant feedback]" />
					</widget>
					<widget class="link_appearance_button" id="last">
						<translation id="text" translation_id="326995" type="use" value="View Match[COMMENT: Link to last match]" />
					</widget>
				</container>
			</container>

		</container>

		<widget class="horizontal_divider" />

		<widget class="scrolling_box">
			<container id="mprb">
				<layout class="fit_children_attachment" alignment="vertical" offset="0" gap="0"/>
				<layout class="stick_to_sides_attachment" alignment="horizontal,top" apply_to_children="true" inset="0"/>
				<widget class="text" id="mprt" auto_size="vertical" />
			</container>
		</widget>
	</container>

</panel>