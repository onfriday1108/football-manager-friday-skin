<panel>
	<colour id="status_icon_text_colour" name="text" />

	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

	<!--table listing the squad statuses and the players that have those statuses-->
	<widget class="table" mode="fill_rows, stripe_rows" id="tabl" layout="40,-1">

		<boolean id="fixed_size_rows" value="false" />
		<boolean id="auto_size_rows" value="true" />
		<integer id="row_spacing" value="0" />

		<list id="column_widget_properties">
			<record indx="0" alignment="centre" />
		</list>
		<list id="column_table_properties">
			<record indx="0" top="4" bottom="4" left="0" alignment="centre"/>
			<record indx="1" top="4" bottom="4" alignment="left,centre_y" />
		</list>

	</widget>


</panel>