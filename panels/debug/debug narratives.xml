<panel>

	<string id="title" value="Narratives Debug" />
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

	<!-- table -->
	<container class="main_box" id="titl">
		<string id="title" value="Narratives Debug" />
		<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

		<container class="scrolling_box">
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" />
			<widget class="table" id="ditb" layout="-1, -1" mode="fill_rows, stripe_rows,printable" auto_size_rows="true" fixed_size_rows="false" row_spacing="0" auto_size="vertical">

				<list id="headings">
					<record alignment="left,centre_y">
						<string id="text" value="Narrative" />
					</record>
					<record alignment="left,centre_y">
						<string id="text" value="Flow" />
					</record>
				</list>

				<record id="default_properties">
					<flags id="alignment" value="left,centre_y" />
				</record>

				<list id="column_table_properties">
					<record indx="0" sort_disabled="true"  />
					<record indx="1"/>
				</list>

			</widget>
		</container>
	</container>

	<!-- buttons area -->
	<container id="btna" embed_in_frame="true">
		<attachment_group class="title_embedded_panel_right" />

		<!-- buttons -->
		<widget class="subtle_button" id="relo" auto_size="all" embed_in_frame="true" click_event="load">
			<string id="text" value="Reload XML" />
		</widget>
	</container>

</panel>