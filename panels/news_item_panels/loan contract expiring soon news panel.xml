<panel>

	<string id="skin_style" value="subtle box"/>

	<layout class="fit_children_attachment" alignment="vertical" offset="0" />
	<layout class="arrange_horizontal_attachment" layout="-1, -1" gap="1" offset="0"/>
	<layout class="stick_to_sides_attachment" alignment="top" inset="0" apply_to_children="true" />


	<container class="inner_subtle_box" id="psdt" height="220">
		<layout class="arrange_vertical_attachment" alignment="top,extend" offset="0" gap="0" />
		<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

		<!-- some pictures -->
		<widget class="competition_news_image_panel" id="ptpc" height="105">
			<layout class="stick_to_sides_attachment" alignment="top" />
		</widget>

		<container height="5" />

		<!-- person name -->
		<widget class="person_button" id="pnam" auto_size="vertical" spec="text" style="semi_bold" colour="text" alignment="centre" size="12">
			<layout class="centre_in_parent_attachment" alignment="horizontal" />
		</widget>

		<!-- person description -->
		<widget class="text" id="ppos" auto_size="vertical" colour="faded text" alignment="top" size="10" multiline="true">
			<layout class="stick_to_sides_attachment" alignment="horizontal" />
		</widget>

		<widget class="container" height="10" />

	</container>

	<container class="inner_subtle_box" height="220">
		<layout class="arrange_vertical_attachment" alignment="top,extend" offset="0" gap="0" />
		<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

		<widget class="label" height="20" font="label" alignment="bottom" >
			<translation id="text" translation_id="383541" type="use" value="Loan Duration[COMMENT: loan contract expiry news item; label for a field showing the duration of the loan]" />
		</widget>

		<widget class="label" id="lodu" height="30" spec="text" style="semi_bold" colour="text" alignment="centre" size="large">
		</widget>

		<widget class="container" height="10" />

		<widget class="horizontal_divider" />

		<widget class="container" height="10" />

		<widget class="table" layout="-1, -1" mode="fill_rows" auto_size="vertical" fixed_size_rows="false" auto_size_rows="true" row_spacing="0">
			<list id="column_table_properties">
				<record index="0" alignment="centre" />
				<record index="1" alignment="centre" />
			</list>

			<widget class="label" height="20" font="label" alignment="bottom" row="0" col="0">
				<translation id="text" translation_id="227844" type="use" value="Apps[comment - Appearances]" />
				<translation id="hint" translation_id="227845" type="use" value="Appearances" />
			</widget>
			<widget class="label" height="20" font="label" alignment="bottom" row="0" col="1">
				<translation id="text" translation_id="227852" type="use" value="Av Rat[comment - Average rating]" />
				<translation id="hint" translation_id="233158" type="use" value="Average Rating" />
			</widget>

			<widget class="number_label" id="apps" height="30" spec="text" style="semi_bold" colour="text" alignment="centre" size="large" row="1" col="0" />
			<widget class="number_label" id="avrt" height="30" spec="text" style="semi_bold" colour="text" alignment="centre" size="large" row="1" col="1" />


		</widget>

		<widget class="label" height="10" />

		<widget class="horizontal_divider" />

		<widget class="label" height="10" />

		<widget class="table" layout="-1, -1" mode="fill_rows" auto_size="vertical" fixed_size_rows="false" auto_size_rows="true" row_spacing="0">
			<list id="column_table_properties">
				<record index="0" alignment="centre" />
				<record index="1" alignment="centre" />
			</list>

			<widget class="label" height="20" spec="text" font="label" alignment="bottom" row="0" col="0">
				<translation id="text" translation_id="292633" type="use" value="Estimated Value[COMMENT: player profile; value label]" />
			</widget>
			<widget class="label" height="20" font="label" alignment="bottom" row="0" col="1">
				<translation id="text" translation_id="383228" type="use" value="Agreed Fee[COMMENT: loan contract expiry news item; label for a field showing the agreed fee to buy player at end of loan]" />
			</widget>

			<widget class="value_label" id="pval" height="30" spec="text" style="semi_bold" colour="text" alignment="centre" size="large" row="1" col="0" />
			<widget class="value_label" id="afee" udfz="true" height="30" spec="text" style="semi_bold" colour="text" alignment="centre" size="large" row="1" col="1" />


		</widget>

		<widget class="label" height="10" />

	</container>



</panel>