<panel>
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

	<container class="scrolling_box" id="ScBx">
		<flags id="scroll_bar_class" value="scroll_bar_vertical_inbox"/>
		<container>
			<attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="6" horizontal_inset="0"/>

			<!-- main body text -->
			<widget class="inbox_body_text" id="etxt" auto_size="vertical" hidden="true" font="inbox_body"/>

			<container id="icbx" class="inner_subtle_box" appearance="boxes/custom/inbox attachment/personal/paper">
				<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_inset="0"/>
				<!-- inbox content panel gets added here -->

			</container>
		</container>
	</container>
</panel>
