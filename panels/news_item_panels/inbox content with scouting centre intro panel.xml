				</widget>
			</container>

			<widget class="text" auto_size="vertical" id="adtx"/>
		</container>
	</container>

	<container id="psrC" >
		<attachment_group class="vertical_arrange_autosize"/>

		<container class="inner_subtle_box">
			<attachment_group class="vertical_arrange_autosize" vertical_offset="10"/>
			<container embed_in_frame="true">
				<attachment_group class="title_embedded_panel_left" />

				<widget class="link_button_title" embed_in_frame="true" section="plas">
					<translation id="text" translation_id="227995" type="use" value="Player Search" />
					<record id="object_property" get_property="objt" set_property="objt" />
				</widget>
			</container>

			<widget class="text" auto_size="vertical">
				<translation id="text" translation_id="450774" type="use" value="The package owned determines the number of players available to search through as well as increasing the level of knowledge about them.[COMMENT: FR 22281, scouting package help]" />
			</widget>

			<widget class="scouting_top_panel" id="spba" file="team/scouting top bar packages">
				<record id="object_property" get_property="objt" set_property="objt" />
				<list id="visible_items">
					<flags value="scpc" />
					<flags value="yosp" />
				</list>
			</widget>


		</container>
	</container>
