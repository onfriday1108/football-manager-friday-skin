	<!-- content area -->
	<container id="ctbx">
		<layout class="arrange_horizontal_attachment" layout="-1, 250" offset="0" gap="10"/>
		<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true"/>

		<widget class="inbox_body_text" id="bdtx"/>

		<container class="inner_box_no_margin" id="infc">
			<attachment_group class="vertical_arrange_autosize" vertical_alignment="top" vertical_offset="0" horizontal_inset="0"/>
