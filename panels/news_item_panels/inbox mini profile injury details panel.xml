<panel>
	<layout class="fit_children_attachment" alignment="vertical" offset="0" />
	<layout class="stick_to_sides_attachment" alignment="horizontal,top" inset="0" apply_to_children="true" />

	<string id="skin_style" value="subtle box" />

	<container class="main_box" id="psdt" red_replacement="negative bg">
		<layout class="centre_in_parent_attachment" alignment="vertical" offset="0" apply_to_children="true" />
		<layout class="fit_children_attachment" alignment="vertical" offset="0" />
		<layout class="arrange_horizontal_attachment" layout="48, -1" gap="8" />

		<!-- injury icon -->
		<widget class="picture" id="inji" file="icons/48px/injured" height="48" image_alignment="centre" scale_picture="false" keep_aspect_ratio="true" />

		<container>
			<attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="0" horizontal_alignment="horizontal" horizontal_inset="0" />

			<container>
				<layout class="fit_children_attachment" alignment="vertical" offset="0" gap="0" />
				<layout class="stick_to_sides_attachment" alignment="left,top" inset="0" apply_to_children="true" />

				<widget class="link_button_title" id="link" section="PInj" red_replacement="text" blue_replacement="text" colour="text">
					<translation id="text" translation_id="450760" type="use" value="Medical Centre[COMMENT: Panel title for when viewing medical report, was ID 447586 but we've since been asked to change it to Medical Centre]" />
				</widget>
			</container>

			<!-- injury description -->
			<widget class="label" id="injl" spec="text" auto_size="vertical" size="large" style="bold" alignment="left,centre_y" />

			<!-- injury duration -->
			<widget class="label" id="injd" colour="text" alignment="left,centre_y" auto_size="vertical" />

			<!-- injury circumstance -->
			<widget class="label" id="injc" colour="faded text" alignment="left,centre_y" auto_size="vertical" />
		</container>
	</container>

</panel>