<panel>
	<layout class="fit_children_attachment" alignment="vertical" />
	<layout class="arrange_horizontal_attachment" layout="220, -1" offset="0" gap="4"/>
	<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" />

	<container class="inner_subtle_box" id="FObx" >
		<layout class="arrange_vertical_attachment" alignment="top" gap="8"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" />

		<widget class="text" id="ObTp" auto_size="vertical" font="title">
			<translation id="text" translation_id="447651" type="use" value="Fixture[COMMENT: FR 20159; player injury table; fixture injury was recieved in column header]" />
		</widget>

		<container id="Dyni" height="120">
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />
		</container>

		<container height="60">
			<layout class="arrange_horizontal_attachment" layout="30, -1" gap="4"/>
			<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" />

			<widget class="object_portrait_picture" id="ObPc" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true" />

			<container height="60">
				<layout class="arrange_vertical_attachment" alignment="middle" gap="0" />
				<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" />

				<widget class="person_button" id="ObNm" auto_size="vertical" hidden="true" />
				<widget class="comp_button" id="ObCo" icon_enabled="false" auto_size="vertical" hidden="true" />
				<widget class="text" id="ObDs" auto_size="vertical" multiline="false" hidden="true" />
			</container>
		</container>
	</container>

	<container>
		<attachment_group class="vertical_arrange_autosize" vertical_gap="4"/>

		<container >
			<attachment_group class="vertical_arrange_autosize" vertical_offset="10" vertical_gap="14" horizontal_alignment="horizontal" horizontal_inset="14" />

			<container>

				<attachment_group class="vertical_arrange_autosize" vertical_gap="1" />

				<container>
					<layout class="fit_children_attachment" alignment="vertical" />
					<layout class="arrange_horizontal_attachment" layout="-3, -2" offset="0" gap="10" />
					<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />

					<widget class="text" auto_size="vertical" font="label" alignment="left, top" multi_line="true">
						<translation id="text" translation_id="466483" type="use" value="Press Conference Location[COMMENT: table heading; where press conference was held]" />
					</widget>

					<widget class="text" auto_size="none" font="label" alignment="left, top" multi_line="true">
						<translation id="text" translation_id="466484" type="use" value="Journalists Expected[COMMENT: FR 22941; press conference invite news; title for box containing number of journalists expected to attend]" />
					</widget>
				</container>

				<container>
					<layout class="fit_children_attachment" alignment="vertical" />
					<layout class="arrange_horizontal_attachment" layout="-3, -2" offset="0" />
					<layout class="stick_to_sides_attachment" alignment="top" inset="0" apply_to_children="true" />

					<!-- Location label -->
					<widget class="text" id="Lolb" font="value" auto_size="vertical" />

					<!-- Number of journalists in attendance-->
					<widget class="text" id="NCla" font="value" auto_size="vertical" />
				</container>

			</container>

			<widget class="horizontal_divider">
				<layout class="stick_to_sides_attachment" alignment="horizontal" inset="8" />
			</widget>

			<container>

				<attachment_group class="vertical_arrange_autosize" vertical_gap="4" />

				<!-- Notable Journalists Attending-->
				<widget class="text" auto_size="vertical" font="title" >
					<translation id="text" translation_id="466485" type="use" value="Notable Journalists In Attendance[COMMENT: FR 22941; press conference invite news; title for box containing list of notable journalists]" />
				</widget>

				<widget class="table" id="NMtb" layout="-1, -1" mode="fill_rows, fill_custom_rows" auto_size_rows="true" fixed_size_rows="false" auto_size="vertical" row_spacing="10">
					<flags id="row_appearance" value="tables/standard/row/divider/row" />
				</widget>

			</container>

			<widget class="horizontal_divider">
				<layout class="stick_to_sides_attachment" alignment="horizontal" inset="8" />
			</widget>

			<container>

				<attachment_group class="vertical_arrange_autosize" vertical_gap="4" />

				<!-- Likely Talking Points -->
				<widget class="text" auto_size="vertical" font="title" alignment="left, centre_y">
					<translation id="text" translation_id="466486" type="use" value="Likely Talking Points[COMMENT: FR 22941; press conference invite news; title for box containing number of journalists expected to attend]" />
				</widget>

				<widget class="table" id="Tapt" layout="-1" mode="fill_rows" auto_size_rows="true" fixed_size_rows="false" auto_size="vertical" />

			</container>

			<widget class="horizontal_divider">
				<layout class="stick_to_sides_attachment" alignment="horizontal" inset="8" />
			</widget>

			<container >
				<attachment_group class="vertical_arrange_autosize" vertical_gap="4" />

				<widget class="text" auto_size="vertical" font="title" alignment="left, centre_y">
					<translation id="text" translation_id="466487" type="use" value="Press Interest[COMMENT: FR 22941; press conference invite news; title for box containing description of what the journalists might be interested in]" />
				</widget>

				<!-- String describing what press are interested in -->
				<widget class="text" id="PrIn" auto_size="vertical" multiline="true" />

			</container>

		</container>
	</container>

</panel>