<panel>
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0"/>

	<list id="properties_to_add_to_context">
		<integer value="TIdx"/>
		<integer value="Ttea"/>
		<record>
			<integer id="get_property" value="numr"/>
			<integer id="set_property" value="numb"/>
		</record>
	</list>

	<container class="main_box">
		<translation id="title" translation_id="297304" type="use" value="Major Nations"/>

		<attachment_group class="vertical_arrange" vertical_alignment="bottom,extend" horizontal_inset="0" />

		<!--table listing the major nations-->
		<widget class="client_object_list_table" id="ntbl" mode="fill_rows, stripe_rows, keyboard">
			<boolean id="should_force_refresh" value="true"/>
			<record id="object_property">
				<integer id="get_property" value="CMna"/>
				<integer id="set_property" value="objL"/>
				<boolean id="dont_set_object" value="true"/>
			</record>

			<record id="viewed_property_ids">
				<record id="Ttea"/>
				<record id="Nffr" alignment="centre"/>
			</record>
		</widget>

		<!--button-->
		<container>
			<attachment_group class="vertical_arrange_autosize" vertical_offset="0" horizontal_alignment="right" />

			<widget class="link_button" id="gtcl" auto_size="horizontal" section="ctnt">
				<translation id="text" translation_id="297305" type="use" value="View all nations"/>
				<record id="object_property">
					<integer id="get_property" value="objt"/>
					<integer id="set_property" value="objt"/>
				</record>
			</widget>
		</container>
	</container>

</panel>