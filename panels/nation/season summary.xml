<panel>

	<boolean id="save_session_state" value="true" />
	

	<!-- filter panel on right, rest on left --> 
	<layout class="arrange_horizontal_attachment" alignment="right,extend" offset="0" />

	<!-- children stick top and bottom --> 
	<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0" />

	
	<!-- titled box -->
	<container class="inner_box" >
		<translation id="text" translation_id="254555" type="use" value="Season Summary[COMMENT - nation screen; domestic season summary section]" />
		<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />
		
		<!-- menu bar -->
		<container id="btns" embed_in_frame="true">
			<attachment_group class="title_embedded_panel_right" />
			
			<!-- seasons popup -->
			<widget class="embedded_season_selection_list" id="year" height="30" sele="year" auto_size="horizontal" embed_in_frame="true" />
			
		</container>

		<!-- scrolling box - used if more than 1 table-->
		<container class="scrolling_box" save_session_state="true">
			<container id="cont">
				<attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="0" horizontal_alignment="horizontal" horizontal_inset="0" />
            </container>
		</container>
	</container>
	
</panel>