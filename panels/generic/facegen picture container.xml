			<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" />


			<container width="300" height="350" id="FRfC">

				<widget class="button" id="ClBu" disabled="true" click_event="ClpI" alignment="centre" height="50">
					<translation id="text" translation_id="424578" type="use" value="Clear Points[Manager profile face creation panel; removing the points allocated by the user on the photo]" />
					<layout class="stick_to_sides_attachment" alignment="horizontal,bottom" inset="0" />
				</widget>

        <container>
        <layout class="arrange_horizontal_attachment" alignment="middle" offset="0">
          <global id="horizontal_gap" name="ui.split_button_row_gap" />
        </layout>
				<widget class="icon_button" id="roLe" hidden="true" width="150" icon_alignment="centre" icon="icons/16px/rotate left" appearance="buttons/standard/split/left/button" alignment="centre" height="45">
					<layout class="stick_to_sides_attachment" alignment="left,bottom" inset="0" />
					<record id="click_event">
						<flags id="event_id" value="roPi" />
						<flags id="value" value="90" />
					</record>
				</widget>

				<widget class="icon_button" id="roRI" hidden="true" width="150" icon_alignment="centre" alignment="centre" appearance="buttons/standard/split/right/button" icon="icons/16px/rotate right" height="45">
					<layout class="stick_to_sides_attachment" alignment="right,bottom" inset="0" />
					<record id="click_event">
						<flags id="event_id" value="roPi" />
						<flags id="value" value="-90" />
					</record>
				</widget>
        </container>

				<container height="300" width="300">
					<layout class="stick_to_sides_attachment" alignment="left,top" inset="0" />

					<widget class="facenge_picture" background_colour="black" height="300" width="300" wants_mouse_events="true" wants_contextual_events="true" id="aFRn" image_alignment="centre">
						<layout class="stick_to_sides_attachment" alignment="left,top" inset="0" />
					</widget>
				</container>

				<container height="300" width="300">
					<layout class="stick_to_sides_attachment" alignment="left,top" inset="0" />
