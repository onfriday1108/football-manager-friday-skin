				</record>
			</widget>

		</container>
	</container>



	<widget class="icon_button" icon="icons/16px/left" id="no" event_id="no" auto_size="horizontal" height="40">
		<layout class="stick_to_sides_attachment" alignment="left" inset="0" />
		<translation id="text" type="use" translation_id="247672" value="Back" />
	</widget>


</panel>