            <layout class="centre_in_parent_attachment" alignment="all" />
						<attachment class="moveable_attachment" />
						<attachment class="facegen_sizeable_attachment" request_layout="false"/>

					</container>
				</container>

			</container>

			<container width="300">
				<layout class="arrange_vertical_attachment" alignment="bottom,extend" offset="10" gap="10" />
				<layout class="stick_to_sides_attachment" alignment="horizontal" inset="10" apply_to_children="true" />
				<widget class="picture" id="tmFR" scale_picture="true" keep_aspect_ratio="true" image_alignment="centre" />
				<widget class="text" id="PhDe" alignment="centre" auto_size="vertical">
				</widget>
			</container>

		</container>

		<widget class="horizontal_divider" image_alignment="centre">
			<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" />
		</widget>

		<container height="40">
			<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" />
			<layout class="arrange_horizontal_attachment" alignment="middle" offset="0" gap="0" />
			<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0" />

			<record id="default_properties" alignment="centre" icon_colour="text" auto_size="horizontal" />
			
			<widget class="icon_button" id="brBu" icon="icons/16px/folder">
				<record id="click_event">
					<integer id="event_id" value="mChn" />
					<integer id="mode" value="0" />
				</record>
			</widget>

			<widget class="icon_button" id="cBut" icon="icons/16px/edit">
				<record id="click_event">
					<integer id="event_id" value="mChn" />
