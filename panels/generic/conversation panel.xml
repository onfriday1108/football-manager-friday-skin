<panel appearance="boxes/subsection">
	<boolean id="save_immediate_state" value="true"/>

	<container id="Mnbx">
		<layout class="arrange_vertical_attachment" alignment="top, extend" offset="0"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>
		<layout class="stick_to_sides_attachment" alignment="all" inset="0"/>

		<container id="TtBx" height="70">
			<layout class="arrange_horizontal_attachment" layout="-1, -1, 34" offset="0" gap="0"/>
			<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

			<container>
				<layout class="arrange_vertical_attachment" alignment="top,extend" offset="10" gap="0"/>
				<layout class="stick_to_sides_attachment" alignment="horizontal" inset="100" apply_to_children="true"/>

				<widget class="text" id="cont" auto_size="vertical" alignment="left, centre_y" font="label"/>
				<widget class="text" id="cnvh" auto_size="vertical" font="title" alignment="left, centre_y" size="xlarge"/>
			</container>

			<container>
				<layout class="arrange_vertical_attachment" alignment="vertical" offset="10" gap="0"/>
				<layout class="stick_to_sides_attachment" alignment="right" inset="80" apply_to_children="true"/>

				<container id ="ctBW" file="widgets/current transfer budget widget" hidden="true"/>
			</container>

			<container>
				<layout class="arrange_vertical_attachment" layout="-1, -1" offset="0" gap="0"/>
				<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>
				<layout class="stick_to_sides_attachment" alignment="vertical" inset="10"/>

				<widget class="icon_button" id="bkBt" click_event="bclk" icon="icons/16px/up" disabled="true" appearance="none"/>
				<widget class="icon_button" id="frWr" click_event="fclk" icon="icons/16px/down" disabled="true" appearance="none"/>
			</container>

		</container>

		<container class="main_box" id="celB">
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

			<!-- Conversation cells are created here. -->
		</container>
	</container>

	<container class="empty_state" id="nVcC" hidden="true">
		<layout class="stick_to_sides_attachment" alignment="all"/>

		<widget class="label" id="nVcv" hidden="true" alignment="centre" size="large">
			<layout class="stick_to_sides_attachment" alignment="all" inset="10"/>
		</widget>
	</container>
</panel>
