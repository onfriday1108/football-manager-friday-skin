<panel>
	<flags id="selected_appearance" value="buttons/custom/tactics/player icon/selected/button"/>
	<flags id="appearance" value="buttons/custom/tactics/player icon/normal/button"/>

	<layout class="arrange_vertical_attachment" alignment="bottom,extend" offset="0" gap="0"/>
	<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>


	<container class="client_object_viewer_xml_panel" id="snIC" >
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>

		<widget id="cKit" class="object_portrait_picture"  image_alignment="centre" scale_picture="true">
			<record id="object_property">
				<list id="get_properties">
					<record>
						<integer id="get_property" value="Pctx" />
						<integer id="set_property" value="valu" />
					</record>
				</list>
			</record>
		</widget>

	</container>

	<!--name-->

	<container id="nmcn">
		<layout class="arrange_vertical_attachment" alignment="top" offset="2" gap="0"/>
		<layout class="fit_children_attachment" alignment="vertical,fill" offset="2" gap="0"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" inset="2" apply_to_children="true"/>

		<widget class="text" id="name" spec="pitch" size="normal" alignment="centre,can_scale" auto_size="vertical" multiline="false" style="semi_bold"/>
		<widget class="tactical_role_label" id="role" abbt="false" size="xxsmall" alignment="centre,can_scale" auto_size="vertical" colour="faded white"/>


	</container>

</panel>