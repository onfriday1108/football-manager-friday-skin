<panel>

	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

	<!--container for the team badges-->
	<container id="tbdg">
		<layout class="arrange_horizontal_attachment" layout="-1, -1" gap="4" />
		<layout class="stick_to_sides_attachment" alignment="vertical" inset="4" apply_to_children="true" />

		<!--home team-->
		<container>
			<layout class="arrange_vertical_attachment" alignment="top" />
			<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

			<widget class="object_portrait_picture" id="htpi" height="90" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true">
				<record id="object_property">
					<integer id="get_property" value="home" />
				</record>
			</widget>
			<widget class="team_button" id="htna" mode="1" icon_enabled="false" alignment="centre" auto_size="vertical" spec="text" size="small">
				<string id="text" value="Team1" />
				<record id="object_property">
					<integer id="get_property" value="home" />
				</record>
			</widget>
		</container>

		<!--away team-->
		<container>
			<layout class="arrange_vertical_attachment" alignment="top" />
			<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

			<widget class="object_portrait_picture" id="atpi" height="90" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true">
				<record id="object_property">
					<integer id="get_property" value="away" />
				</record>
			</widget>
			<widget class="team_button" id="atna" mode="1" icon_enabled="false" alignment="centre" auto_size="vertical" spec="text" size="small">
				<string id="text" value="Team2" />
				<record id="object_property">
					<integer id="get_property" value="away" />
				</record>
			</widget>
		</container>

	</container>

</panel>