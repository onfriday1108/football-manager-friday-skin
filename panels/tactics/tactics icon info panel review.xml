<panel width="80" height="80" use_hit_mask="true">
	<flags id="selected_appearance" value=""/>

		<layout class="arrange_vertical_attachment" alignment="middle" offset="0" gap="-8"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

		<!-- Name -->
		<container class="main_box" id="nmcn" height="38" appearance="boxes/bordered/no margin/top/paper">
			<layout class="stick_to_sides_attachment" alignment="all" inset="0,2,4,2" apply_to_children="true"/>

			<widget class="text" id="name" colour="text" size="8" alignment="centre,can_scale" multiline="false" style="bold"/>
		</container>

		<!-- Rating -->
		<container class="main_box" height="30" appearance="boxes/bordered/no margin/bottom/paper">
			<layout class="arrange_horizontal_attachment" alignment="middle" offset="0" gap="2" />
			<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

			<!--condition-->
			<widget class="pie_condition_label" id="cond" file="widgets/pie condition no label" width="15">
				<integer id="mode" value="2"/>
			</widget>

			<!--rating-->
			<widget class="match_rating_label_formatted" id="avra" size="8.5" auto_size="horizontal" alignment="centre,can_scale" format="[%fraction#1-2.1]" />
		</container>

</panel>
