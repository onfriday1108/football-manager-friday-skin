<panel>
	<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

	<container>
		<layout class="arrange_vertical_attachment" alignment="bottom" offset="0" gap="2" />
		<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

		<container height="12">
			<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>
			<widget class="picture" id="bsic" scale_picture="true" file="pitch/icons/kit/large/simple kit" image_alignment="centre"/>
		</container>

		<container class="main_box" appearance="boxes/custom/darken/rounded/no margin/paper">
			<attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="0" horizontal_inset="0" />

			<widget class="text" id="name" colour="text" size="8" alignment="centre,can_scale" auto_size="vertical" multiline="false" style="semi_bold"/>

		</container>

	</container>

</panel>