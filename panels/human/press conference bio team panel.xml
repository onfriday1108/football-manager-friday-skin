<panel>
	<attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="8" horizontal_alignment="horizontal" horizontal_inset="0"/>

	<boolean id="should_force_refresh" value="true"/>

	<!--dynamic image here please-->
	<container id="Dyni" height="117" width="160">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>
	</container>

	<!-- team name -->
	<widget class="client_object_label" id="nmlb" auto_size="vertical" font="title" alignment="left, centre_y"/>

	<widget class="horizontal_divider"/>

	<container>
		<attachment_group class="vertical_arrange_autosize" vertical_gap="2"/>

		<!-- team lg position -->
		<widget class="text" id="PosL" font="title" auto_size="vertical" alignment="left, centre_y">
			<translation id="text" translation_id="227884" type="use" value="Position"/>
		</widget>

		<container height="75">
			<layout class="arrange_horizontal_attachment" layout="45, -1" offset="0" gap="8"/>
			<layout class="stick_to_sides_attachment" alignment="horizontal"/>

			<widget class="object_portrait_picture" id="cpbg" width="45" height="45" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true">
				<layout class="stick_to_sides_attachment" alignment="vertical"/>
			</widget>

			<container>
				<layout class="arrange_vertical_attachment" alignment="middle" offset="0" gap="0"/>
				<layout class="stick_to_sides_attachment" alignment="vertical" inset="0"/>

				<widget class="text" id="lgps" auto_size="vertical" alignment="left, centre_y">
					<layout class="stick_to_sides_attachment" alignment="horizontal"/>
				</widget>

				<widget class="text" id="lgst" auto_size="vertical" colour="faded text" alignment="left, centre_y">
					<layout class="stick_to_sides_attachment" alignment="horizontal"/>
				</widget>
			</container>
		</container>
	</container>

	<widget class="horizontal_divider" id="forD"/>

	<container>
		<attachment_group class="vertical_arrange_autosize" vertical_gap="2"/>

		<!-- team reputation -->
		<widget class="text" id="rept" font="title" auto_size="vertical" alignment="left, centre_y"/>
		<widget class="reputation_label" id="repl" spec="text" auto_size="vertical" alignment="left, centre_y" mode="1"/>
		<widget class="club_reputation_stars_label" id="reps" spec="text" auto_size="vertical" alignment="left, centre_y"/>
		<widget class="fifa_ranking_label" id="rnkl" spec="text" auto_size="vertical" alignment="left, centre_y" mode="1"/>
	</container>

	<widget class="horizontal_divider" id="forD"/>

	<container>
		<attachment_group class="vertical_arrange_autosize" vertical_gap="2"/>

		<!-- team form -->
		<widget class="text" id="forT" font="title" auto_size="vertical" alignment="left, centre_y">
			<translation id="text" translation_id="308194" type="use" value="Form[COMMENT: team form 5 games, all competitions, short version]"/>
		</widget>
		<widget class="team_recent_form_widget" id="form" spec="text" height="24" alignment="left, centre_y"/>
	</container>

</panel>
