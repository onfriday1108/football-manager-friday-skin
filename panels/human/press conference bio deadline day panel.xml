  <widget class="horizontal_divider"/>

  <container>

    <attachment_group class="vertical_arrange_autosize" vertical_gap="2"/>

    <!-- total transfer spend -->
    <widget class="text" font="title" alignment="left, centre_y">
      <translation id="text" translation_id="466447" type="use" value="Total Transfer Spend[COMMENT: FR 22941; press conference; label indicating the total transfer expenditure during a given transfer window]"/>
    </widget>

    <widget class="text" id="trsp" spec="text" auto_size="vertical" alignment="left, centre_y"/>

