<panel>
	<attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="8" horizontal_alignment="horizontal" horizontal_inset="0"/>

	<boolean id="should_force_refresh" value="true"/>

	<!--dynamic image here please-->
	<container id="Dyni" height="117" width="160">
		<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true"/>
	</container>

	<container>
		<attachment_group class="vertical_arrange_autosize" vertical_gap="2"/>

		<!-- person name -->
		<widget class="person_button" id="nmlb" font="title" auto_size="vertical" alignment="left, centre_y"/>

		<!-- person description -->
		<widget class="text" id="delb" auto_size="vertical" alignment="left, centre_y">
		</widget>
	</container>

	<widget class="horizontal_divider"/>

	<container>
		<attachment_group class="vertical_arrange_autosize" vertical_gap="2"/>

		<!-- suspension -->
		<widget class="text" font="title" auto_size="vertical" alignment="left, centre_y">
			<translation id="text" translation_id="466450" type="use" value="Suspension[COMMENT: FR 22941; press conference; title for section showing players suspension details]"/>
		</widget>

		<!-- card picture -->
		<widget class="player_status_button" id="card" height="30" maximised="true"/>

		<!-- table showing suspension progress across comps -->
		<widget class="player_bans_overview_panel" id="susc" height="100" file="player/player bans small panel"/>
	</container>

	<widget class="horizontal_divider"/>

	<container>
		<attachment_group class="vertical_arrange_autosize" vertical_gap="2"/>

		<!-- appearances -->
		<widget class="text" font="title" auto_size="vertical" alignment="left, centre_y">
			<translation id="text" translation_id="227845" type="use" value="Appearances"/>
		</widget>
		<widget class="text" id="plap" spec="text" size="small" auto_size="vertical" alignment="left, centre_y"/>
	</container>

	<widget class="horizontal_divider"/>

	<container>
		<attachment_group class="vertical_arrange_autosize" vertical_gap="2"/>

		<!-- form -->
		<widget class="text" font="title" auto_size="vertical" alignment="left, centre_y">
			<translation id="text" translation_id="395236" type="use" value="Form (Last 5 Matches)[COMMENT: player overview; sub panel title for player form graph]"/>
		</widget>
		<widget class="number_label" id="plfm" spec="text" size="small" alignment="left, centre_y" auto_size="vertical"/>
	</container>

</panel>