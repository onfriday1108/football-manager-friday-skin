<panel>
	<layout class="arrange_vertical_attachment" alignment="bottom,extend" offset="0"/>
	<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

	<!-- instead of the selection colour, use this colour if team is knocked out of the competition -->
	<colour id="competition_knocked_out_colour" name="negative" />
	<colour id="competition_still_in_colour" name="positive" />
	<colour id="competition_not_entered_colour" name="faded text" />

	<widget class="table" id="cmpt" mode="fill_rows, printable" layout="40,-1" auto_size_rows="true" fixed_size_rows="false" column_spacing="10" row_spacing="0">

		<list id="column_widget_properties">
			<record index="0" alignment="centre" image_alignment="centre" scale_picture="true" keep_aspect_ratio="true"/>
			<record index="1" alignment="left,centre_y" multiline="false"/>
		</list>

		<list id="column_table_properties">
			<record id="badg" index="0" left="2" right="2" top="2" bottom="2" sort_disabled="true"/>
			<record id="info" index="1"/>
		</list>
	</widget>

	<!--countdown text-->
	<widget class="text" alignment="centre" auto_size="vertical" id="txtw" size="10" multiline="true" colour="title"/>

</panel>