            <!-- Parried -->
            <record id="MPsp" />
            <!-- Tipped -->
            <record id="MPsd" />

            <!-- Conceded -->
            <record id="MPcn" />

            <!-- MISC -->
            <!-- Shots Blocked Defending -->
            <record id="MPsb" />
            <!-- Mistakes -->
