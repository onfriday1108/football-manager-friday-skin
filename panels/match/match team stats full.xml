<panel>
  <boolean id="display_all_players" value="true" />

  <!-- Starting XI Styles -->
  <flags id="stxi" value="tables/standard/normal" />

  <!-- Subs Styles -->
  <flags id="subs" value="tables/custom/squad/substitute/row" />

  <layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

  <container class="subsection_box_transparent" >
    <layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

    <container embed_in_frame="true">
		<attachment_group class="title_embedded_panel_left" horizontal_offset="0"/>

      <widget class="view_menu_label" id="labl" />
      <widget class="view_menu_popup" id="plvi" />
    </container>

    <widget class="match_player_list_table" id="pltb" database_table_type="1" mode="fill_rows, stripe_rows, fill_columns" row_height="28" column_spacing="45" use_super_headings="true">
      <boolean id="auto_size_rows" value="false" />
      <boolean id="fixed_size_rows" value="true" />
      <boolean id="dont_restore_selection" value="true" />
      <boolean id="save_session_state" value="true" />
      <boolean id="sort_disabled" value="true" />

      <flags id="default_view" value="gnIn" />

      <!--available views-->
      <list id="viws">

        <record id="gnIn">
          <translation id="name" translation_id="247410" type="use" value="General Info" />
          <record id="view">
            <!-- Shirt Number -->
            <record id="PsnS" width="32"/>
            <!--- Time -->
            <flags id="PinD" />
            <!-- Status -->
            <flags id="Pcar" />
            <!-- Name -->
            <flags id="Pnam" />

            <!-- PASSING -->
            <!--- Total/Completed -->
            <record id="tCmP" />
            <!-- Key -->
            <record id="MPkp" />
            <!-- Chances created -->
            <record id="MPCc" />

            <!-- CROSSES -->
            <!-- Total/Completed -->
            <record id="tCmC" />

            <!-- TACKLING -->
            <!-- Total/Completed -->
            <record id="tCmT" />
            <!-- Key -->
            <record id="MPkt" />
            <!-- Fouls Made -->
            <record id="MPfm" />
            <!-- Interceptions -->
            <record id="MPic" />

            <!-- HEADING -->
            <!-- Total/Won -->
            <record id="tCmH" />
            <!-- Key -->
            <record id="MPky" />

            <!-- MISC -->
            <!-- Dribbles -->
            <record id="DrbL"/>

            <!-- SHOOTING -->
            <!-- Total/On Target -->
            <record id="ssOt" />

            <!--- Goals -->
            <record id="MPgl" auto_hide_priority="2"/>
            <!-- Assists -->
            <record id="MPas" auto_hide_priority="2"/>
            <!-- Rating -->
            <record id="MPrt" auto_hide_priority="2"/>
            <!-- Condition -->
            <record id="PcOL" auto_hide_priority="2"/>
          </record>
        </record>

        <record id="GKIn">
