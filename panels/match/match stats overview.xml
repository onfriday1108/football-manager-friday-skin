<panel>

	<!--This panel is for the mini overview stats we get on the match overview page-->
	<layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

	<boolean id="show_bars" value="true" />

	<list id="preset_stats_list">
		<record id="m_sg" />
		<record id="m_on" />
		<record id="m_fl" />
		<record id="m_yc" />
		<record id="m_ps" />
	</list>

	<widget class="table" id="mstn" layout="5,-2,-3,-2,5" mode="printable" auto_size_rows="true" fixed_size_rows="false"  row_spacing="0">

		<list id="column_widget_properties">
			<record indx="1" alignment="left,centre_y" colour="text" />
			<record indx="2" alignment="centre" colour="text" />
			<record indx="3" alignment="right,centre_y" colour="text" />
		</list>

		<list id="column_table_properties">
			<record indx="1" id="home" sort_disabled="true" />
			<record indx="2" id="labl" sort_disabled="true" />
			<record indx="3" id="away" sort_disabled="true" />
		</list>

	</widget>

</panel>