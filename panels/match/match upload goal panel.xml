<panel>

	<layout class="arrange_vertical_attachment" alignment="top,extend" offset="0" gap="1" />
	<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

	<!--clip length-->
	<container height="50">
		<layout class="centre_in_parent_attachment" alignment="vertical" apply_to_children="true"/>
		<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="2" />

		<!--line-->
		<widget class="horizontal_divider" />

		<!--text-->
		<widget class="text" id="leng" auto_size="vertical" multiline="false" alignment="centre"/>
	</container>

	<!--description-->
	<container class="main_box" id="mnbx">
		<layout class="arrange_vertical_attachment" alignment="top,extend" offset="0" />
		<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

		<!--description and close button-->
		<container height="50">
			<layout class="arrange_horizontal_attachment" alignment="middle,extend" offset="0" />
			<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0" />

			<!--icon and score-->
			<container width="40">
				<layout class="arrange_vertical_attachment" alignment="top,extend" offset="0" />
				<layout class="stick_to_sides_attachment" alignment="horizontal" apply_to_children="true" inset="0" />

				<!--icon-->
				<widget class="picture" file="icons/16px/goal" auto_size="vertical" image_alignment="centre"/>

				<!--score-->
				<widget class="text" id="scor" alignment="centre"/>
			</container>

			<!--title-->
			<widget class="text" id="titl" multiline="true" alignment="centre"/>

			<!--close button-->
			<widget class="icon_button" id="dele" icon="icons/16px/clear" width="30" icon_alignment="centre">
			</widget>
		</container>

		<!--time and camera-->
		<container height="30">
			<layout class="arrange_horizontal_attachment" alignment="right,extend" offset="0" />
			<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0" />

			<!--match time-->
			<widget class="text" id="time" alignment="left,centre_y"/>

			<!--camera button-->
			<widget class="popup_button" id="came" auto_size="horizontal">
			</widget>
		</container>

		<!--separator-->
		<widget class="horizontal_divider" />

		<!--detailed description-->
		<widget class="text" id="desc" multiline="true" alignment="left,top"/>
	</container>

</panel>