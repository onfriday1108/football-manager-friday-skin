<panel>
  <layout class="arrange_vertical_attachment" layout="20,-1" gap="0" offset="0"/>
  <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

  <container >
    <layout class="arrange_horizontal_attachment" alignment="middle" gap="4" offset="0"/>
    <layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

    <widget class="number_label" id="attn" style="semi_bold" size="small" auto_size="horizontal" alignment="right,bottom"/>
    <widget class="person_button" id="pbtn" format="[%person#1-initial_surname]" style="semi_bold" size="small" enforce_style="true" auto_size="horizontal" alignment="right,bottom"/>
    <widget class="text" id="typT" size="small" auto_size="horizontal" colour="faded text" alignment="left,bottom"/>
    <widget class="text" id="timT" size="small" auto_size="horizontal" colour="faded text" enforce_style="true" alignment="left,bottom"/>
  </container>
  
  <widget class="chalkboard_pitch" id="Cpit" select_event="slic" pitch_draw_ads="false" hide_linked_events="true" pitch_draw_arrows="true" pitch_keep_selected_icons="false" pitch_draw_grass="false" pitch_player_icon_font="match pitch players" wants_mouse_events="true" pitch_draw_dugout="false" enable_popup="true" line_width="1" pitch_line_colour="text" pitch_touchline_width_percentage="100"/>

</panel>