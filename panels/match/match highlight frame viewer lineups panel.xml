<panel>
  <layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

  <container id="mplu">

    <!-- The children will be laid out from left to right and fill up the entire area-->
    <layout class="arrange_horizontal_attachment" alignment="fill" offset="0" gap="10" />
    <layout class="stick_to_sides_attachment" alignment="vertical" inset="20" apply_to_children="true" />

    <container id="htbx" >
      <layout class="arrange_vertical_attachment" alignment="top,extend" offset="0" gap="10" />
      <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

      <container height="60">
        <layout class="stick_to_sides_attachment" alignment="top" apply_to_children="true"/>
        <layout class="arrange_horizontal_attachment" alignment="fill"/>

        <widget class="client_object_label" id="htlb" height="50" size="normal" colour="text" alignment="right,centre_y" disable_link="true"/>
        <widget class="object_portrait_picture" height="50" id="htpc" scale_picture="true" image_alignment="left"/>
      </container>
      
      <container>
        <layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

        <!-- Home Team Line Up -->
        <container id="hpco">
          <layout class="arrange_horizontal_attachment" alignment="right,extend" offset="0" />
          <layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />

          <widget class="pitch_with_tactics" id="hpwt" vertical="true" icon_flags="show_name,dont_allow_player_links,use_player_kits_back,show_number,show_role_duty_labels,disable_name_links,show_selection_image">
            <integer id="tactics_creator_index" value="2" />
            <boolean id="pitch_dont_draw_indicators" value="true" />
            <integer id="pitch_kit_height" value="40" />
            <boolean id="pitch_show_captain" value="true" />
            <integer id="pitch_vertical_padding" value="0"/>
          </widget>
        </container>
      </container>
    </container>

    <container id="atbx">
      <layout class="arrange_vertical_attachment" alignment="top,extend" offset="0" gap="10" />
      <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true" />

      <container height="60">
        <layout class="stick_to_sides_attachment" alignment="top" apply_to_children="true"/>
        <layout class="arrange_horizontal_attachment" alignment="fill"/>

        <widget class="client_object_label" id="atlb" height="50" size="normal" colour="text" alignment="right,centre_y" disable_link="true"/>
        <widget class="object_portrait_picture" height="50" id="atpc" scale_picture="true" image_alignment="left"/>
      </container>

      <container>
        <layout class="stick_to_sides_attachment" alignment="all" inset="0" apply_to_children="true" />

        <!-- Away Team Line Up -->
        <container id="apco">
          <layout class="arrange_horizontal_attachment" alignment="right,extend" offset="0" />
          <layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true" />

          <widget class="pitch_with_tactics" id="apwt" vertical="true" icon_flags="show_name,dont_allow_player_links,use_player_kits_back,show_number,show_role_duty_labels,disable_name_links,show_selection_image">
            <integer id="tactics_creator_index" value="2" />
            <boolean id="pitch_dont_draw_indicators" value="true" />
            <integer id="pitch_kit_height" value="40" />
            <boolean id="pitch_show_captain" value="true" />
            <integer id="pitch_vertical_padding" value="0"/>
          </widget>
        </container>
      </container>

    </container>
  </container>
</panel>