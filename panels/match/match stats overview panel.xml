<panel>
	<layout class="arrange_horizontal_attachment" alignment="fill" offset="0" gap="5" />
	<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true" inset="0" />

	<!--match stats-->
	<widget class="match_stats_panel" file="match/match stats titled">
		<record id="object_property" set_property="objt" get_property="objt" />
	</widget>

	<!--formations-->
	<container class="main_transparent_box" red_replacement="pitch_box_background" colour="white">
		<translation id="title" translation_id="247329" type="use" value="Player Ratings" />

		<layout class="stick_to_sides_attachment" alignment="all" apply_to_children="true" inset="0" />

		<widget class="pitch_with_both_tactics" id="pwbt" file="widgets/pitch with both tactics vertical badges" icon_flags="show_name,show_extra_details,drop_initial_if_possible,show_number,dont_colour_number,colour_names_for_team" player_icon_file="tactics/tactics icon info panel match stats" pitch_draw_grass="false">
      <boolean id="vertical" value="true"/>
			<boolean id="pitch_is_read_only" value="true" />
			<boolean id="pitch_dont_draw_indicators" value="true" />
			<boolean id="allow_y_score_adjustment_for_roles" value="false" />
			<flags id="pitch_alignment" value="can_scale"/>
		</widget>

	</container>
</panel>