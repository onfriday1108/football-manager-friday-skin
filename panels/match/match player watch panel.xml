<panel>

  <layout class="arrange_vertical_attachment" alignment="top" offset="0" gap="5"/>
  <layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

  <!--player selection dropdown-->
  <widget class="popup_button" id="plys" width="150" auto_size="vertical" primary_use_icon_app_rep_colour="false" />

  <!--first row of stats-->
  <container class="client_object_property_labelled_panel_grid" id="1row" height="60" row_count="1">
    <record id="label_widget_properties">
      <boolean id="abbt" value="true"/>
    </record>
    <list id="properties">
      <integer value="Pcar" />
      <record id="Pcon">
        <record id="value_widget_properties">
          <flags id="height" value="30"/>
        </record>
      </record>
      <record id="Pfit">
        <record id="value_widget_properties">
          <flags id="height" value="30"/>
        </record>
      </record>
      <record id="Prat" >
          <record id="value_widget_properties" fixed_appearance_alignment="left,centre_y">
            
          </record>
      </record>
    </list>
  </container>

  <!--separator-->
  <widget class="horizontal_divider" />

  <!--second row of stats-->
  <container class="match_player_stats_grid_panel" id="2row" height="60" row_count="1" max_properties="4">
    <record id="label_widget_properties">
      <boolean id="abbt" value="true"/>
    </record>
  </container>

  <!--third row of stats-->
  <container class="client_object_property_labelled_panel_grid" id="3row" height="60" row_count="1">
    <list id="properties">
      <integer value="Pmtc" />
    </list>
  </container>


</panel>