    <record id="object_property">
      <integer id="get_property" value="objt" />
      <integer id="set_property" value="objt" />
    </record>
  </widget>

  <!--  away incidents panel -->
  <widget class="away_match_incidents_panel" id="amip" small_version="true" file="match/match incidents overview popup right" />

</panel>