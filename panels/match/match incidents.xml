<panel>

	<attachment_group class="vertical_arrange_autosize" vertical_offset="0" vertical_gap="0" horizontal_alignment="horizontal" horizontal_inset="0" />

	<container id="tntb" height="100">

		<layout class="arrange_horizontal_attachment" layout="100,-1" gap="0"/>
		<layout class="stick_to_sides_attachment" alignment="vertical" apply_to_children="true"/>

		<!-- team kit picture -->
		<!-- comment out to show logos instead of kits -->
		<container height="100" width="100">
			<layout class="stick_to_sides_attachment" alignment="all" inset="4" apply_to_children="true"/>

			<widget class="match_team_logo_picture" id="TeLo"/>
		</container>

		<container>

			<layout class="arrange_horizontal_attachment" alignment="right,extend" offset="0"/>
			<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>

			<!-- team name -->
			<widget class="text" id="mitn" spec="title" size="18" alignment="left,centre_y"/>

			<!-- score -->
			<widget class="text" id="mits" spec="title" alignment="right,centre_y" size="18" auto_size="horizontal" multiline="false"/>

			<!-- aggregate score -->
			<widget class="text" id="mita" spec="title" alignment="right,centre_y" size="18" auto_size="horizontal" multiline="false"/>
		</container>

	</container>

	<widget class="table" id="miit" layout="100,40,-1" mode="fill_rows, stripe_rows" auto_size="vertical" row_spacing="0" auto_size_rows="true" fixed_size_rows="false">

		<list id="column_widget_properties">
			<record index="1" alignment="centre" auto_size="vertical"/>
			<record index="2" spec="text" auto_size="vertical" alignment="left,centre_y"/>
		</list>

		<list id="column_table_properties">
			<record index="1" id="icon" left="4" top="4" bottom="4" />
			<record index="2" id="text" top="4" bottom="4" />
		</list>

	</widget>

</panel>