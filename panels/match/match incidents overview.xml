<panel>

	<layout class="arrange_vertical_attachment" alignment="top,extend" gap="0" offset="0"/>
	<layout class="stick_to_sides_attachment" alignment="horizontal" inset="0" apply_to_children="true"/>

	<container>

		<layout class="stick_to_sides_attachment" alignment="vertical" inset="0" apply_to_children="true"/>
		<layout class="fit_children_attachment" alignment="vertical" offset="0"/>
		<layout class="arrange_horizontal_attachment" alignment="right,extend" offset="0"/>

		<!-- team name -->
		<widget class="text" id="mitn" spec="title" alignment="centre_x" auto_size="vertical" font="label" multiline="false" />

		<!-- score -->
		<widget class="text" id="mits" spec="title" alignment="right,centre_y" auto_size="all" multiline="false" font="label" />

		<!-- aggregate score -->
		<widget class="text" id="mita" spec="title" alignment="right,centre_y" auto_size="all" multiline="false" font="label"/>
	</container>

	<widget class="table" id="miit" layout="24,-1" mode="fill_rows, stripe_rows" row_spacing="4"  auto_size_rows="true" fixed_size_rows="false">

		<list id="column_widget_properties">
			<record index="0" auto_size="all" />
			<record index="1" spec="text" auto_size="vertical" multiline="true" auto_size_minimum_height="28" alignment="left,centre_y"/>
		</list>

		<list id="column_table_properties">
			<record index="0" id="icon" alignment="centre" />
			<record index="1" id="text"/>
		</list>

	</widget>

</panel>