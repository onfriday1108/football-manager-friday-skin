<panel>
	<!-- the pitch-->
	<widget	class="pitch_with_tactics" id="pwtc" icon_flags="show_name,use_player_kits_back,show_number,show_extra_details,colour_names_for_team">
		<boolean id="vertical" value="true"/>
		<boolean id="pitch_dont_draw_indicators" value="true"/>
		<boolean id="pitch_draw_grass" value="false"/>
		<flags id="pitch_alignment" value="can_scale"/>
		<string id="pitch_line_colour" value="faded white" />
		<integer id="pitch_touchline_width_percentage" value="10" />
		<string id="player_icon_file" value="tactics/tactics icon info panel review" />

		<layout class="stick_to_sides_attachment" alignment="all" inset="15,0,0,0" />
	
	</widget>

	<widget class="label" id="fmnm" auto_size="all" font="title" colour="faded text">
		<layout class="stick_to_sides_attachment" alignment="left,top" inset="0" />
	</widget>
</panel>
