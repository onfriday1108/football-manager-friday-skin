<panel layout="-5, -4, -3, 20, -3, 20" auto_size_rows="false" fixed_size_rows="true" row_height="30" >
	<global id="column_spacing" name="ui.button_row_gap"/>

	<flags id="mode" value="fill_rows"/>

	<list id="column_widget_properties">

		<record index="1">
			<flags id="appearance" value="buttons/subtle/normal/button"/>
		</record>
		<record index="2">
			<flags id="appearance" value="buttons/subtle/split/left/button"/>
			<flags id="minus_kind" value="selection_subtle_minus"/>
			<flags id="plus_kind" value="selection_subtle_plus"/>
		</record>
		<record index="4">
			<flags id="appearance" value="buttons/subtle/split/left/button"/>
			<flags id="minus_kind" value="selection_subtle_minus"/>
			<flags id="plus_kind" value="selection_subtle_plus"/>
		</record>

	</list>


	<!-- column display properties -->
	<list id="column_table_properties">

		<!-- rule type column -->
		<record indx="0" >
			<flags id="id" value="rlty" />
		</record>

		<!-- comparison type column -->
		<record indx="1" >
			<flags id="id" value="cmty" />
		</record>

		<!-- value column -->
		<record indx="2" >
			<flags id="id" value="val1" />
		</record>

		<!-- and column -->
		<record indx="3" >
			<flags id="id" value="andc" />
		</record>

		<!-- second value column -->
		<record indx="4" >
			<flags id="id" value="val2" />
		</record>
		<!-- remove rule column -->
		<record indx="5" >
			<flags id="id" value="rmrl" />
		</record>

	</list>
</panel>
<!-- table -->
